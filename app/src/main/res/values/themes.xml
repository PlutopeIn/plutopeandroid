    <style name="BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.0</item>
    </style>


    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#CC00C6FB</item>
        <item name="sv_showcaseColor">#5E99A8</item>
        <!-- <item name="sv_buttonText"></item>-->
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextColor">@color/white</item>
        <item name="sv_detailTextColor">@color/white</item>
    </style>

    <style name="CustomShowcaseTheme2" parent="ShowcaseView">
        <item name="sv_backgroundColor">#e51249d9</item>
        <item name="sv_showcaseColor">#25467A</item>
        <item name="sv_buttonText">Close</item>

    </style>

    <style name="BottomSheetDialogThemeNoAnimation" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowAnimationStyle">@style/BottomSheetDialogNoAnimation</item>
    </style>

    <style name="BottomSheetDialogNoAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>
</resources>