<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#9E5EDF" />
            <corners android:radius="@dimen/_25mdp" />
        </shape>
    </item>

    <!-- Top shadow -->
    <item
        android:left="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#60C38FFB"
                android:startColor="#00FFFFFF" />
            <corners android:radius="@dimen/_25mdp" />
        </shape>
    </item>

    <!-- Left shadow -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:endColor="#60C38FFB"
                android:startColor="#00FFFFFF" />
            <corners android:radius="@dimen/_25mdp" />
        </shape>
    </item>

    <!-- Main content -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#0D0D2B" />
            <corners android:radius="@dimen/_25mdp" />
        </shape>
    </item>
</layer-list>
