<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient Background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:endColor="#9654D9"
                android:startColor="#C693FE"
                android:type="linear" />

            <corners android:radius="37dp" />
        </shape>
    </item>

    <!-- Border -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <corners android:radius="37dp" />
        </shape>
    </item>

    <!-- Stroke -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <stroke
                android:width="1dp"
                android:color="#00000000"
                android:dashWidth="0dp"
                android:dashGap="0dp" />
            <corners android:radius="37dp" />
        </shape>
    </item>

</layer-list>
