<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="assetsViewModel"
            type="com.app.plutope.ui.fragment.dashboard.assets.AssetsViewModel" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_white"
            tools:context=".ui.fragment.dashboard.assets.Assets">

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/border_gray"
                app:layout_collapseMode="pin"
                app:layout_constrainedWidth="true"
                android:layout_marginHorizontal="@dimen/_26mdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_assets_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="true"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toTopOf="@id/edt_search"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                app:layout_constraintVertical_bias="0"
                tools:itemCount="19"
                tools:listitem="@layout/row_assets_list" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/_16mdp"
                android:animateLayoutChanges="true"
                android:animationCache="true"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constrainedHeight="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shimmer_repeat_delay="10"
                app:shimmer_repeat_mode="restart"
                app:shimmer_shape="linear"
                tools:listitem="@layout/row_assets_list">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include layout="@layout/row_simmer_assets_list" />

                    <include layout="@layout/row_simmer_assets_list" />

                    <include layout="@layout/row_simmer_assets_list" />

                    <include layout="@layout/row_simmer_assets_list" />

                    <include layout="@layout/row_simmer_assets_list" />

                    <include layout="@layout/row_simmer_assets_list" />

                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="rv_assets_list,shimmerLayout" />

            <TextView
                android:id="@+id/edt_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16mdp"
                android:layout_marginTop="@dimen/_20mdp"
                android:layout_marginBottom="@dimen/_80mdp"
                android:autofillHints=""
                android:background="@drawable/bg_tab_un_selected"
                android:fontFamily="@font/violet_sans"
                android:gravity="center_vertical"
                android:hint="@string/search_"
                android:paddingVertical="@dimen/_16mdp"
                android:paddingStart="@dimen/_43mdp"
                android:paddingEnd="@dimen/_20mdp"
                android:textColor="@color/black"
                android:textColorHint="@color/icon_gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/_14mdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barrier"
                app:layout_constraintVertical_bias="0" />

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="@dimen/_16mdp"
                android:layout_height="@dimen/_16mdp"
                android:layout_marginStart="@dimen/_16mdp"
                android:src="@drawable/ic_search"
                app:layout_constraintBottom_toBottomOf="@id/edt_search"
                app:layout_constraintStart_toStartOf="@id/edt_search"
                app:layout_constraintTop_toTopOf="@id/edt_search"
                app:tint="@color/icon_gray"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/btn_explore_token"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38mdp"
                android:layout_marginTop="@dimen/_10mdp"
                android:background="@drawable/button_bg_border_blue"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_30mdp"
                android:text="@string/explore_new_token"
                android:textAllCaps="false"
                android:textColor="@color/bg_white"
                android:visibility="gone"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edt_search" />


            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_search_token"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="img_search,edt_search" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>