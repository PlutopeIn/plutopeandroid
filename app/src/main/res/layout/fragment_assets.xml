<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="assetsViewModel"
            type="com.app.plutope.ui.fragment.dashboard.assets.AssetsViewModel" />

    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                tools:context=".ui.fragment.dashboard.assets.Assets">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_assets_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:layout_marginHorizontal="@dimen/_16mdp"
                    android:nestedScrollingEnabled="false"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constrainedHeight="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/row_assets_list" />


                <TextView
                    android:id="@+id/edt_search"
                    style="@style/edittext_fill_bg_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16mdp"
                    android:layout_marginTop="@dimen/_22mdp"
                    android:layout_marginBottom="@dimen/_150mdp"
                    android:autofillHints=""
                    android:fontFamily="@font/montserrat_light"
                    android:gravity="center_vertical"
                    android:hint="@string/search"
                    android:paddingStart="@dimen/_43mdp"
                    android:paddingEnd="@dimen/_20mdp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/purple_7576D"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/_10mdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_assets_list" />

                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="@dimen/_16mdp"
                    android:layout_height="@dimen/_16mdp"
                    android:layout_marginStart="@dimen/_17mdp"
                    android:src="@drawable/ic_search"
                    app:layout_constraintBottom_toBottomOf="@id/edt_search"
                    app:layout_constraintStart_toStartOf="@id/edt_search"
                    app:layout_constraintTop_toTopOf="@id/edt_search"
                    tools:ignore="ContentDescription" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_search_token"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:constraint_referenced_ids="img_search,edt_search" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>