<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.app.plutope.model.NFTModel" />

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="@dimen/_164mdp"
        android:layout_height="@dimen/_164mdp"
        android:layout_marginHorizontal="@dimen/_5mdp"
        android:layout_marginBottom="@dimen/_15mdp"
        app:cardBackgroundColor="#E025264D"
        app:cardCornerRadius="@dimen/_10mdp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgNft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_apes_dummy"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_transperant"
                android:fontFamily="@font/quicksand_regular"
                android:gravity="center_horizontal"
                android:paddingVertical="@dimen/_12mdp"
                android:text="@{model.parsedMetadata.name}"
                android:textColor="@color/white"
                android:textSize="@dimen/_12msp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="nft style ape" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>