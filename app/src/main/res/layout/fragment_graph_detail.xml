<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="graphDetailViewModel"
            type="com.app.plutope.ui.fragment.transactions.buy.graph.GraphDetailViewModel" />

        <variable
            name="model"
            type="com.app.plutope.model.Tokens" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        tools:context=".ui.fragment.transactions.buy.graph.GraphDetail">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_50mdp"
                android:layout_height="@dimen/_50mdp"
                android:layout_marginStart="@dimen/_10mdp"
                android:layout_marginTop="@dimen/_10mdp"
                android:focusable="true"
                android:foreground="@drawable/ripple_effect"
                android:padding="@dimen/_8mdp"
                android:src="@drawable/ic_back_new"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_80mdp"
                android:ellipsize="end"
                android:fontFamily="@font/violet_sans"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_20mdp"
                app:layout_constraintBottom_toBottomOf="@id/img_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_back" />


            <ImageView
                android:id="@+id/img_notification"
                android:layout_width="@dimen/_40mdp"
                android:layout_height="@dimen/_40mdp"
                android:layout_marginEnd="@dimen/_19mdp"
                android:src="@drawable/ic_notification_with_bg"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/img_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_back" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_white"
            android:fillViewport="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_toolbar">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lyt_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_10mdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_coin"
                        android:layout_width="@dimen/_80mdp"
                        android:layout_height="@dimen/_80mdp"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:src="@drawable/img_pluto_pe_logo_with_bg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        />

                    <TextView
                        android:id="@+id/txt_coin_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:fontFamily="@font/violet_sans"
                        android:gravity="center_horizontal"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_28msp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/img_coin"
                        tools:text="0.000"
                        />


                    <TextView
                        android:id="@+id/txt_network_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6mdp"
                        android:background="@drawable/bg_corner_radius_4"
                        android:fontFamily="@font/inter"
                        android:paddingHorizontal="@dimen/_4mdp"
                        android:paddingVertical="@dimen/_1mdp"
                        android:text="@string/you_pay"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10msp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@id/txt_coin_balance"
                        app:layout_constraintStart_toEndOf="@id/txt_coin_balance"
                        app:layout_constraintTop_toTopOf="@id/txt_coin_balance"

                        />

                    <TextView
                        android:id="@+id/txt_coin_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8mdp"
                        android:layout_marginEnd="@dimen/_3mdp"
                        android:fontFamily="@font/inter"
                        android:gravity="end"
                        android:textColor="@color/bottom_icon_grey"
                        android:textSize="@dimen/_16msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toStartOf="@id/txt_coin_margin"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_coin_balance"
                        tools:text="$19.564" />


                    <TextView
                        android:id="@+id/txt_coin_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3mdp"
                        android:fontFamily="@font/inter"
                        android:gravity="start"
                        android:textColor="@color/black"

                        android:textSize="@dimen/_16msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toEndOf="@id/txt_coin_price"
                        app:layout_constraintTop_toTopOf="@id/txt_coin_price"
                        tools:text="3.19%"

                        />


                    <TextView
                        android:id="@+id/txt_circulating_supply_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20mdp"
                        android:layout_marginTop="@dimen/_20mdp"
                        android:fontFamily="@font/inter"
                        android:gravity="center_vertical"
                        android:text="@string/circulating_supply"
                        android:textColor="@color/sub_title_gray"
                        android:textSize="@dimen/_14msp"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintEnd_toStartOf="@id/txt_circulating_supply_value"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_coin_price" />

                    <TextView
                        android:id="@+id/txt_circulating_supply_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12mdp"
                        android:layout_marginEnd="@dimen/_10mdp"
                        android:fontFamily="@font/violet_sans"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintStart_toEndOf="@id/txt_circulating_supply_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/txt_circulating_supply_title"
                        tools:text="1,93,83,875,687 6786 49832 68 96 BTC" />


