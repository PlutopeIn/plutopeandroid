                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_200mdp"
                            android:layout_marginTop="@dimen/_40mdp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/chart_view" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_time_select"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15mdp"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:layout_marginBottom="@dimen/_10mdp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_chart"
                        tools:listitem="@layout/layout_time_select"
                        />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/txt_about_coin_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16mdp"
                    android:layout_marginTop="@dimen/_30mdp"
                    android:layout_marginEnd="@dimen/_10mdp"
                    android:fontFamily="@font/violet_sans"
                    android:gravity="center"
                    android:text='@{@string/about_model_name(model.t_name)}'
                    android:textColor="@color/black"
                    android:textSize="@dimen/_23mdp"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_graph"
                    tools:text="hjjdsjldkfgpldfjg"

                    />

                <TextView
                    android:id="@+id/txt_coin_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18mdp"
                    android:layout_marginTop="@dimen/_16mdp"
                    android:layout_marginBottom="@dimen/_50mdp"
                    android:fontFamily="@font/violet_sans"
                    android:lineSpacingExtra="@dimen/_2mdp"
                    android:textColor="@color/black"
                    android:textColorLink="@color/blue_00C6FB"
                    android:textSize="@dimen/_16msp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_about_coin_title"


                    />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_webside"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16mdp"
                    android:layout_marginTop="@dimen/_19mdp"
                    android:background="@drawable/bg_corner_radius_17"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_coin_about">

                    <ImageView
                        android:id="@+id/img_globe"
                        android:layout_width="@dimen/_20mdp"
                        android:layout_height="@dimen/_20mdp"
                        android:layout_marginStart="@dimen/_11mdp"
                        android:src="@drawable/ic_globe"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_19mdp"
                        android:layout_marginStart="@dimen/_13mdp"
                        android:layout_marginEnd="@dimen/_10mdp"
                        android:fontFamily="@font/quicksand_regular"
                        android:gravity="center_vertical"
                        android:text="plutope.com"
                        android:textColor="@color/blue_00C6FB"
                        android:textSize="@dimen/_14msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/img_globe"
                        app:layout_constraintTop_toTopOf="parent"

                        />


                </androidx.constraintlayout.widget.ConstraintLayout>


