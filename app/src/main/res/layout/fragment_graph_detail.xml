                            android:layout_height="0dp"
                            android:background="@color/border_gray"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/lyt_total_supply"
                            app:layout_constraintStart_toEndOf="@id/lyt_volume"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/lyt_total_supply"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintEnd_toStartOf="@id/lyt_market_cap"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@id/lyt_volume"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/txt_total_supply_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_10mdp"
                                android:fontFamily="@font/inter"
                                android:text="@string/total_supply"
                                android:textColor="@color/sub_title_gray"
                                android:textSize="@dimen/_12msp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"

                                />

                            <TextView
                                android:id="@+id/txt_total_supply_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8mdp"
                                android:fontFamily="@font/violet_sans"
                                android:gravity="center"
                                android:layout_marginHorizontal="@dimen/_5mdp"
                                android:textSize="@dimen/_15msp"
                                android:lineSpacingExtra="@dimen/_2mdp"
                                android:paddingBottom="@dimen/_7mdp"
                                android:textColor="@color/black"
                                app:layout_constrainedWidth="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/txt_total_supply_title"
                                tools:text="19,730,896565456 BTC" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:id="@+id/vertical_separator_2"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="@color/border_gray"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/lyt_market_cap"
                            app:layout_constraintStart_toEndOf="@id/lyt_total_supply"
                            app:layout_constraintTop_toTopOf="parent" />


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/lyt_market_cap"
                            android:layout_width="118dp"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:orientation="vertical"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1"
                            app:layout_constraintStart_toEndOf="@id/lyt_total_supply"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/txt_market_cap_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter"
                                android:paddingTop="@dimen/_10mdp"
                                android:text="@string/market_cap"
                                android:textColor="@color/sub_title_gray"
                                android:textSize="@dimen/_12msp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/txt_market_cap_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_16mdp"
                                android:layout_marginTop="@dimen/_8mdp"
                                android:fontFamily="@font/violet_sans"
                                android:gravity="center"
                                android:lineSpacingExtra="@dimen/_2mdp"
                                android:paddingBottom="@dimen/_5mdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15msp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/txt_market_cap_title"
                                tools:text="$1,279B" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>


