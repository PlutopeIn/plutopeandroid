<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.app.plutope.model.Tokens" />

        <variable
            name="currencySymbol"
            type="String" />

        <import type="com.app.plutope.utils.UtilsKt" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_crypto_coin"
            android:layout_width="@dimen/_35mdp"
            android:layout_height="@dimen/_35mdp"
            android:layout_marginStart="@dimen/_26mdp"
            android:background="@drawable/bg_circle_light_gray"
            android:scaleType="centerCrop"
            android:src="@drawable/img_pluto_pe_logo_with_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/txt_crypto_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_11mdp"
            android:fontFamily="@font/violet_sans"
            android:text="@{model.t_symbol}"
            android:textColor="@color/black"

            android:textSize="@dimen/_12msp"
            app:layout_constraintStart_toEndOf="@id/img_crypto_coin"
            app:layout_constraintTop_toTopOf="@+id/img_crypto_coin"
            tools:text="Bitcoin" />


        <TextView
            android:id="@+id/txt_crypto_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5mdp"
            android:layout_marginTop="-4dp"
            android:fontFamily="@font/violet_sans"
            android:text="@{model.t_type}"
            android:textColor="@color/value_gray"
            android:textSize="@dimen/_8msp"
            android:visibility="visible"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="@+id/txt_crypto_name"
            app:layout_constraintStart_toEndOf="@id/txt_crypto_name"
            app:layout_constraintTop_toTopOf="@+id/txt_crypto_name"
            tools:text="BTC"

            />

        <TextView
            android:id="@+id/txt_crypto_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4mdp"
            android:fontFamily="@font/inter"
            android:text='@{currencySymbol + String.format("%.8f", Double.valueOf(model.t_price))}'
            android:textColor="@color/dark_gray"

            android:textSize="@dimen/_10msp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/txt_crypto_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_crypto_type"
            app:layout_constraintVertical_bias="0.5"
            tools:text="$19.564" />

        <TextView
            android:id="@+id/txt_crypto_diffrence_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8mdp"
            android:fontFamily="@font/violet_sans"
            android:text=""
            android:textColor="@color/green_00A323"

            android:textSize="@dimen/_10msp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/txt_crypto_price"
            app:layout_constraintStart_toEndOf="@id/txt_crypto_price"
            app:layout_constraintTop_toTopOf="@id/txt_crypto_price"
            tools:text="$3.16"

            />

        <TextView
            android:id="@+id/txt_btc_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_25mdp"
            android:fontFamily="@font/violet_sans"
            android:textColor="@color/black"

            android:textSize="@dimen/_12msp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_crypto_name"
            tools:text="4,468 BTC" />


        <TextView
            android:id="@+id/txt_usd_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4mdp"
            android:fontFamily="@font/inter"
            android:text=""
            android:textColor="@color/dark_gray"

            android:textSize="@dimen/_11msp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/txt_btc_price"
            app:layout_constraintTop_toBottomOf="@id/txt_btc_price"
            tools:text="$3.465887 USD" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_12mdp"
            android:background="@color/border_gray"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="@+id/txt_btc_price"
            app:layout_constraintStart_toStartOf="@id/img_crypto_coin"
            app:layout_constraintTop_toBottomOf="@+id/img_crypto_coin" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>