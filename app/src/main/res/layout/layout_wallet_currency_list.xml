<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.app.plutope.model.CurrencyModel" />

        <variable
            name="listener"
            type="com.app.plutope.ui.adapter.CurrencyListAdapter.OnActionClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_country_flag"
            android:layout_width="@dimen/_30mdp"
            android:layout_height="@dimen/_30mdp"
            android:onClick="@{()->listener.onEditCLick(model)}"
            android:src="@drawable/img_logo_with_circle_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txt_currency_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_15mdp"
            android:layout_marginStart="@dimen/_16mdp"
            android:fontFamily="@font/quicksand_medium"
            android:onClick="@{()-> listener.onDeleteClick(model)}"
            android:text="@{model.name}"
            android:textColor="@color/white"
            android:textSize="@dimen/_12msp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_country_flag"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Passcode/Biometric" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>