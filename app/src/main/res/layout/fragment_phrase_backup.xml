<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="phraseBackupViewModel"
            type="com.app.plutope.ui.fragment.wallet.backup.PhraseBackupViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            tools:context=".ui.fragment.wallet.backup.PhraseBackupFragment">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_circle_bg"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toTopOf="@id/guid2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="-78dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guid2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".45" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guid1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".29" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guid3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".38" />

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_30mdp"
                android:layout_height="@dimen/_30mdp"
                android:layout_marginStart="@dimen/_17mdp"
                android:layout_marginTop="@dimen/_20mdp"
                android:padding="@dimen/_8mdp"
                android:src="@drawable/ic_back_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"


                />



            <TextView
                android:id="@+id/txt_backup_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_33mdp"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="@string/secret_phrase_backup"
                android:textColor="@color/white"
                android:textSize="@dimen/_27msp"
                app:layout_constraintBottom_toTopOf="@id/txt_backup_des"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_back"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/txt_backup_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_36mdp"
                android:layout_marginTop="@dimen/_19mdp"
                android:fontFamily="@font/quicksand_regular"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_10msp"
                android:text="@string/your_secret_phrase_is_the_master_key_to_your_wallet_and_anyone_that_has_it_can_access_your_crypto_never_share_it"
                android:textColor="@color/white"
                android:textSize="@dimen/_13msp"
                app:layout_constraintBottom_toTopOf="@id/guid1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_backup_title"
                app:layout_constraintVertical_bias="0" />

            <!--
                        <ImageView
                            android:id="@+id/img_encryption_locked"
                            android:layout_width="@dimen/_245mdp"
                            android:layout_height="@dimen/_200mdp"
                            android:src="@drawable/ic_encryption"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/guid3" />
            -->

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/img_encryption_locked"
                android:layout_width="@dimen/_245mdp"
                android:layout_height="@dimen/_245mdp"
                android:scaleType="centerCrop"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guid3"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/secret_phrases"
                app:lottie_speed="2" />

            <!--style="@style/button_border_blue"-->
            <Button
                android:id="@+id/btn_back_up_manually"
                style="@style/wallet_button_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_50mdp"
                android:layout_marginTop="@dimen/_80mdp"
                android:text="@string/back_up_manually"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="@dimen/_20mdp"
                app:layout_constraintBottom_toTopOf="@id/btn_back_up_to_google_drive"

                />

            <Button
                android:id="@+id/btn_back_up_to_google_drive"
                style="@style/wallet_button_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_50mdp"
                android:layout_marginTop="@dimen/_20mdp"
                android:layout_marginBottom="@dimen/_20mdp"
                android:text="@string/back_up_to_icloud"
                android:textAllCaps="false"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_encryption_locked"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.7" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>