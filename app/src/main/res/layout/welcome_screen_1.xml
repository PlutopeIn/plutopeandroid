<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_height="match_parent"
     android:layout_width="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white">

    <ImageView
        android:visibility="invisible"
        android:id="@+id/img_back"
        android:layout_width="@dimen/_50mdp"
        android:layout_height="@dimen/_50mdp"
        android:layout_marginStart="@dimen/_10mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:focusable="true"
        android:foreground="@drawable/ripple_effect"
        android:padding="@dimen/_8mdp"
        android:src="@drawable/ic_back_new"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20mdp"
        android:fontFamily="@font/inter"
        android:text="@string/skip"
        android:textColor="@color/sub_title_gray"
        android:textSize="@dimen/_15mdp"
        app:layout_constraintBottom_toBottomOf="@id/img_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_back" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="@dimen/_20mdp"
        android:scaleType="centerCrop"
        android:src="@drawable/welcome_screen_img_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_back" />


    <!--
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300mdp"
            android:layout_marginTop="@dimen/_100mdp"
            android:padding="@dimen/_40mdp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/spend_crypto"
            app:lottie_speed="2" />
    -->


    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_27mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:fontFamily="@font/violet_sans"
        android:gravity="start"
        android:lineSpacingExtra="@dimen/_6mdp"
        android:text="@string/spend_your_crypto_anywhere_in_the_world_with_plutope_debit_card"
        android:textColor="@color/black"
        android:textSize="@dimen/_32msp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view"

        />

    <!--android:text="@string/just_top_up_your_crypto_in_your_card_and_you_are_good_to_go_your_plutope_card_works_at_all_merchants_that_take_mastercard"-->
    <TextView
        android:id="@+id/txt_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_27mdp"
        android:layout_marginTop="@dimen/_21mdp"
        android:fontFamily="@font/inter"
        android:gravity="start"
        android:lineSpacingExtra="@dimen/_3mdp"
        android:text="@string/unlock_the_power_to_use_your_crypto_anywhere_in_the_world_with_our_seamless_spending_options"
        android:textColor="@color/sub_title_gray"
        android:textSize="@dimen/_16msp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title"

        />
    
    <ImageView
        android:id="@+id/img_button_next_w1"
        android:layout_width="@dimen/_60mdp"
        android:layout_height="@dimen/_60mdp"
        android:layout_marginTop="@dimen/_20mdp"
        android:src="@drawable/ic_circle_welcom_button"
        android:visibility="visible"
        app:layout_constraintVertical_bias="1"
        android:layout_marginBottom="@dimen/_30mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_instruction"


        />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>