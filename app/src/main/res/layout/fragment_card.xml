<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cardViewModel"
            type="com.app.plutope.ui.fragment.card.card_list.CardViewModel" />

        <variable
            name="cardListAdapter"
            type="com.app.plutope.ui.fragment.card.card_list.CardListAdapter" />
    </data>

    <!--   <ScrollView
           android:id="@+id/scrollView"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:fitsSystemWindows="true"
           android:fillViewport="true">-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        tools:context=".ui.fragment.dashboard.Dashboard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_upper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/img_semi_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="-60dp"
                android:layout_marginTop="-300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_circle_bg"
                android:visibility="gone"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toTopOf="@id/guid2"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guid1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".1" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guid2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".5" />

            <TextView
                android:id="@+id/txt_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20mdp"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/card"
                android:textColor="@color/white"
                android:textSize="@dimen/_18msp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_notification"
                android:layout_width="@dimen/_40mdp"
                android:layout_height="@dimen/_40mdp"
                android:layout_marginEnd="@dimen/_20mdp"
                android:src="@drawable/ic_notification_with_bg"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toBottomOf="@id/txt_toolbar_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_toolbar_title" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_card_with_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/img_card_saprate_bg"
                android:minHeight="@dimen/_215mdp"
                app:layout_constraintTop_toBottomOf="@+id/guid1">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_card_list"
                    setAdapter="@{cardListAdapter}"
                    submitList="@{cardViewModel.cardList}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_20mdp"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/row_card_list" />


                <Button
                    android:id="@+id/btn_get_card"
                    style="@style/wallet_button_gradient"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_38mdp"
                    android:fontFamily="@font/quicksand_bold"
                    android:includeFontPadding="false"
                    android:maxHeight="@dimen/_38mdp"
                    android:paddingHorizontal="@dimen/_38mdp"
                    android:paddingVertical="@dimen/_11mdp"
                    android:text="@string/get_card"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_12mdp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/img_card"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/guid1"

                >

                <ImageView
                    android:id="@+id/img_card_logo"
                    android:layout_width="@dimen/_128mdp"
                    android:layout_height="@dimen/_45mdp"
                    android:layout_marginStart="@dimen/_48mdp"
                    android:layout_marginTop="@dimen/_48mdp"
                    android:src="@drawable/img_logo_splash"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/img_card_info"
                    android:layout_width="@dimen/_29mdp"
                    android:layout_height="@dimen/_29mdp"
                    android:layout_marginTop="@dimen/_42mdp"
                    android:layout_marginEnd="@dimen/_42mdp"
                    android:src="@drawable/ic_info"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/txt_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_71mdp"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="center_horizontal"
                    android:text="1234 4567 7899 0123"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_21msp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img_card_logo" />

                <TextView
                    android:id="@+id/txt_balance_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_44mdp"
                    android:layout_marginTop="@dimen/_26mdp"
                    android:fontFamily="@font/quicksand_regular"
                    android:text="@string/balance"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12msp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_card_number"

                    />


                <TextView
                    android:id="@+id/txt_balance_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1mdp"
                    android:layout_marginEnd="@dimen/_10mdp"
                    android:layout_marginBottom="@dimen/_44mdp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="$29,100.90"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_22msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/guid_card"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="@id/txt_balance_title"
                    app:layout_constraintTop_toBottomOf="@id/txt_balance_title"
                    app:layout_constraintVertical_bias="0"

                    />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guid_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent=".5" />


                <TextView
                    android:id="@+id/txt_expire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_26mdp"
                    android:fontFamily="@font/quicksand_regular"
                    android:text="@string/expire"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12msp"
                    app:layout_constraintStart_toStartOf="@id/guid_card"
                    app:layout_constraintTop_toBottomOf="@id/txt_card_number"

                    />

                <TextView
                    android:id="@+id/txt_expire_card_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6mdp"
                    android:fontFamily="@font/quicksand_semibold"
                    android:text="05/25"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14msp"
                    app:layout_constraintStart_toStartOf="@id/guid_card"
                    app:layout_constraintTop_toBottomOf="@id/txt_expire"

                    />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageView
                android:id="@+id/img_dollor"
                android:layout_width="@dimen/_50mdp"
                android:layout_height="@dimen/_50mdp"
                android:layout_marginTop="@dimen/_14mdp"
                android:src="@drawable/ic_doller_with_bg"
                app:layout_constraintEnd_toStartOf="@+id/img_bank"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_card_with_bg" />

            <ImageView
                android:id="@+id/img_bank"
                android:layout_width="@dimen/_50mdp"
                android:layout_height="@dimen/_50mdp"
                android:src="@drawable/ic_bank"
                app:layout_constraintEnd_toStartOf="@+id/img_swap"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/img_dollor"
                app:layout_constraintTop_toTopOf="@id/img_dollor" />

            <ImageView
                android:id="@+id/img_swap"
                android:layout_width="@dimen/_50mdp"
                android:layout_height="@dimen/_50mdp"
                android:src="@drawable/ic_swap_with_bg"
                app:layout_constraintEnd_toStartOf="@+id/img_setting"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/img_bank"
                app:layout_constraintTop_toTopOf="@id/img_bank" />

            <ImageView
                android:id="@+id/img_setting"
                android:layout_width="@dimen/_50mdp"
                android:layout_height="@dimen/_50mdp"
                android:src="@drawable/ic_setting_with_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/img_swap"
                app:layout_constraintTop_toTopOf="@id/img_swap"

                />

            <TextView
                android:id="@+id/txt_transactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16mdp"
                android:layout_marginTop="@dimen/_20mdp"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/transactions"
                android:textColor="@color/white"
                android:textSize="@dimen/_18msp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_dollor" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_transaction_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16mdp"
                android:layout_marginTop="@dimen/_10mdp"
                android:layout_marginBottom="@dimen/_100mdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_transactions"
                tools:listitem="@layout/row_transaction_list" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_upper1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/txt_toolbar_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20mdp"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/card"
                android:textColor="@color/white"
                android:textSize="@dimen/_18msp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_coming_soon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/_200mdp"
                android:layout_gravity="center"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_toolbar_title1"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_speed="2"
                app:lottie_rawRes="@raw/coming_soon" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- </ScrollView>-->


</layout>