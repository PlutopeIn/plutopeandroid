<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="notificationViewModel"
            type="com.app.plutope.ui.fragment.notification.NotificationViewModel" />
    </data>

   <!-- <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            tools:context=".ui.fragment.notification.Notification">

            <TextView
                android:id="@+id/txt_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16mdp"
                android:layout_marginTop="@dimen/_20mdp"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/_new"
                android:textColor="@color/white"
                android:textSize="@dimen/_12msp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_new_notification_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_16mdp"
                android:layout_marginTop="@dimen/_8mdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constrainedHeight="true"
                app:layout_constraintTop_toBottomOf="@id/txt_new"
                tools:listitem="@layout/row_notification_list"

                />

            <TextView
                android:id="@+id/txt_earlier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16mdp"
                android:layout_marginTop="@dimen/_20mdp"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/earlier"
                android:textColor="@color/white"
                android:textSize="@dimen/_12msp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_new_notification_list"

                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_earlier_notification_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_16mdp"
                android:layout_marginTop="@dimen/_8mdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constrainedHeight="true"
                app:layout_constraintTop_toBottomOf="@id/txt_earlier"
                tools:listitem="@layout/row_notification_list"

                />
            <androidx.constraintlayout.widget.Group
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="txt_new,rv_new_notification_list,txt_earlier,rv_earlier_notification_list"/>

            <include layout="@layout/layout_coming_soon"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    <!--</androidx.core.widget.NestedScrollView>-->
</layout>