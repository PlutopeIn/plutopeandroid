<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="transferViewModel"
            type="com.app.plutope.ui.fragment.transfer.TransferViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        tools:context=".ui.fragment.transfer.Transfer">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_50mdp"
                android:layout_height="@dimen/_50mdp"
                android:layout_marginStart="@dimen/_10mdp"
                android:layout_marginTop="@dimen/_10mdp"
                android:focusable="true"
                android:foreground="@drawable/ripple_effect"
                android:padding="@dimen/_8mdp"
                android:src="@drawable/ic_back_new"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_80mdp"
                android:ellipsize="end"
                android:fontFamily="@font/violet_sans"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_20mdp"
                app:layout_constraintBottom_toBottomOf="@id/img_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_back" />


            <ImageView
                android:id="@+id/img_notification"
                android:layout_width="@dimen/_40mdp"
                android:layout_height="@dimen/_40mdp"
                android:layout_marginEnd="@dimen/_20mdp"
                android:src="@drawable/ic_share_with_bg"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/img_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_back" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".2" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".25" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_coin"
            android:layout_width="@dimen/_80mdp"
            android:layout_height="@dimen/_80mdp"
            android:layout_marginTop="@dimen/_10mdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_toolbar"

            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10mdp"
            android:layout_marginTop="@dimen/_20mdp"
            android:fontFamily="@font/violet_sans"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/_26msp"
            app:layout_constraintTop_toBottomOf="@id/img_coin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="-0.00123454365BTC" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_swap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_swap1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".12" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_swap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/_20mdp"
            app:layout_constraintEnd_toEndOf="@id/layout_toolbar"
            app:layout_constraintStart_toStartOf="@id/layout_toolbar"
            app:layout_constraintTop_toBottomOf="@id/guid_swap1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_from_swap"
                android:layout_width="@dimen/_35mdp"
                android:layout_height="@dimen/_35mdp"
                android:src="@drawable/img_pluto_pe_logo_with_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/txt_from_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10mdp"
                android:fontFamily="@font/quicksand_medium"
                app:layout_constrainedWidth="true"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/_20msp"
                app:layout_constraintTop_toTopOf="@id/img_from_swap"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_from_swap"
                tools:text="-0.00123454365BTC" />
            <TextView
                android:id="@+id/txt_from_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3mdp"
                android:drawablePadding="@dimen/_6mdp"
                android:fontFamily="@font/quicksand_regular"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/_11msp"
                app:layout_constraintStart_toStartOf="@id/txt_from_balance"
                app:layout_constraintTop_toBottomOf="@id/txt_from_balance"
                tools:text="BEP20" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_down_arrow"
                android:layout_width="@dimen/_22mdp"
                android:layout_height="@dimen/_25mdp"
                android:src="@drawable/ic_down_arrow_big"
                app:tint="@color/bg_white"
                android:layout_marginTop="@dimen/_10mdp"
                app:layout_constraintEnd_toEndOf="@id/img_from_swap"
                app:layout_constraintStart_toStartOf="@id/img_from_swap"
                app:layout_constraintTop_toBottomOf="@id/img_from_swap"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_to_swap"
                android:layout_width="@dimen/_35mdp"
                android:layout_height="@dimen/_35mdp"
                android:layout_marginTop="@dimen/_10mdp"
                android:src="@drawable/img_pluto_pe_logo_with_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_down_arrow" />
            <TextView
                android:id="@+id/txt_to_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10mdp"
                android:fontFamily="@font/quicksand_medium"
                app:layout_constrainedWidth="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_20msp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintTop_toTopOf="@id/img_to_swap"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_to_swap"
                tools:text="-0.00123454365BTC" />
            <TextView
                android:id="@+id/txt_to_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4mdp"
                android:drawablePadding="@dimen/_6mdp"
                android:fontFamily="@font/quicksand_regular"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/_11msp"
                app:layout_constraintStart_toStartOf="@id/txt_to_balance"
                app:layout_constraintTop_toBottomOf="@id/txt_to_balance"
                tools:text="BEP20" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_swap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="txt_balance,txt_price"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/txt_equal"
            android:layout_width="@dimen/_14mdp"
            android:layout_height="@dimen/_10mdp"
            android:layout_marginEnd="@dimen/_5mdp"
            android:background="@drawable/ic_swap_equal"
            android:backgroundTint="@color/purple_7576D"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/_26msp"
            app:layout_constraintBottom_toBottomOf="@id/txt_price"
            app:layout_constraintEnd_toStartOf="@id/txt_price"
            app:layout_constraintTop_toTopOf="@id/txt_price" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7mdp"
            android:drawablePadding="@dimen/_6mdp"
            android:fontFamily="@font/inter"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/_16msp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_balance"
            tools:text="$2.81" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_full_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20mdp"
        android:layout_marginTop="@dimen/_30mdp"
        android:background="@drawable/bg_border_card_radius_23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_price">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_basic_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginTop="@dimen/_29mdp"
                android:fontFamily="@font/violet_sans"
                android:text="@string/date"
                android:textColor="@color/black"
                android:textSize="@dimen/_14msp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@id/txt_date_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_date_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginEnd="@dimen/_10mdp"
                android:fontFamily="@font/violet_sans"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/_14msp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@id/txt_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_date"
                tools:text="May 5, 06:10 PM" />


            <TextView
                android:id="@+id/txt_status_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginTop="@dimen/_20mdp"
                android:fontFamily="@font/violet_sans"
                android:text="@string/status"
                android:textColor="@color/black"
                android:textSize="@dimen/_14msp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@id/txt_status_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_date" />

            <TextView
                android:id="@+id/txt_status_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginEnd="@dimen/_10mdp"
                android:fontFamily="@font/violet_sans"
                tools:text="Completed"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/_14msp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@id/txt_status_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_status_title" />


            <TextView
                android:id="@+id/txt_recipient_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginTop="@dimen/_20mdp"
                android:fontFamily="@font/violet_sans"
                android:text="@string/recipient"
                android:textColor="@color/black"
                android:textSize="@dimen/_14msp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@id/txt_recipient_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_status_title" />

            <TextView
                android:id="@+id/txt_recipient_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5mdp"
                android:layout_marginBottom="@dimen/_33mdp"
                android:ellipsize="middle"
                android:fontFamily="@font/violet_sans"
                android:maxLines="1"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/_14msp"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/txt_date_value"
                app:layout_constraintStart_toEndOf="@id/guidline1"
                app:layout_constraintTop_toTopOf="@id/txt_recipient_title"
                tools:text="0x78bjvbjjsdfbybgbhsfbbbhbfhbhfbhbfhbfhf1adkmgmgmgmkmgk5hhnkjn54" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="227dp"
                app:layout_constraintStart_toStartOf="@id/txt_recipient_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1mdp"
            android:layout_marginHorizontal="@dimen/_30mdp"
            android:background="@color/border_gray"
            app:layout_constraintTop_toBottomOf="@id/layout_basic_detail"

            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_finance_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_basic_detail">


            <TextView
                android:id="@+id/txt_network_fee_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginTop="@dimen/_29mdp"
                android:fontFamily="@font/violet_sans"
                android:text="@string/network_fee"
                android:textColor="@color/black"
                android:textSize="@dimen/_14msp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@id/txt_network_fee_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_network_fee_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginEnd="@dimen/_10mdp"
                android:fontFamily="@font/violet_sans"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/_14msp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@id/txt_network_fee_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_network_fee_title"
                tools:text="0.0001534 BNB($0.02)" />


            <TextView
                android:id="@+id/txt_nonce_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginTop="@dimen/_20mdp"
                android:fontFamily="@font/violet_sans"
                android:text="@string/nonce"
                android:textColor="@color/black"
                android:textSize="@dimen/_14msp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@id/txt_nonce_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_network_fee_title" />

            <TextView
                android:id="@+id/txt_nonce_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginEnd="@dimen/_10mdp"
                android:layout_marginBottom="@dimen/_30mdp"
                android:fontFamily="@font/violet_sans"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/_14msp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_nonce_title"
                tools:text="20" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/txt_more_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20mdp"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:text="@string/more_details"
            android:textAllCaps="false"
            android:fontFamily="@font/violet_sans"
            android:textColor="@color/blue_0015FF"
            android:textSize="@dimen/_20mdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_full_detail"
            app:layout_constraintVertical_bias="0.8"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>