<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.app.plutope.model.Tokens" />

        <import type="com.app.plutope.utils.UtilsKt" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5mdp"
        app:cardBackgroundColor="@color/purple_25264D"
        app:cardCornerRadius="@dimen/_10mdp"
        app:cardElevation="@dimen/_6mdp"
        app:cardUseCompatPadding="false">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_crypto_coin"
                android:layout_width="@dimen/_35mdp"
                android:layout_height="@dimen/_40mdp"
                android:layout_marginStart="@dimen/_14mdp"
                android:src="@drawable/img_pluto_pe_logo_with_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:id="@+id/txt_crypto_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_19mdp"
                android:layout_marginStart="@dimen/_7mdp"
                android:fontFamily="@font/quicksand_semibold"
                android:text="@{model.t_symbol}"
                android:textColor="@color/white"
                android:textSize="@dimen/_13msp"
                app:layout_constraintStart_toEndOf="@id/img_crypto_coin"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="BTC"

                />


            <TextView
                android:id="@+id/txt_crypto_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10mdp"
                android:background="@drawable/bg_corner_radius_2"
                android:fontFamily="@font/quicksand_regular"
                android:paddingHorizontal="@dimen/_5mdp"
                android:paddingVertical="@dimen/_2mdp"
                android:text="@{model.t_type}"
                android:textColor="@color/white"
                android:textSize="@dimen/_10msp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/txt_crypto_symbol"
                app:layout_constraintStart_toEndOf="@id/txt_crypto_symbol"
                app:layout_constraintTop_toTopOf="@id/txt_crypto_symbol"

                tools:text="Network name"

                />

            <TextView
                android:id="@+id/txt_crypto_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_19mdp"
                android:layout_marginTop="@dimen/_5mdp"
                android:fontFamily="@font/quicksand_regular"
                android:text="@{model.t_name}"
                android:textColor="@color/purple_7576D"
                android:textSize="@dimen/_10msp"
                android:visibility="visible"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/txt_crypto_symbol"
                app:layout_constraintTop_toBottomOf="@+id/txt_crypto_symbol"
                app:layout_constraintVertical_bias="0.5"
                tools:text="Bitcoin"

                />


            <TextView
                android:id="@+id/txt_usd_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10mdp"
                android:fontFamily="@font/quicksand_medium"
                android:text="@{UtilsKt.setBalanceText(Double.valueOf(model.t_balance),``,Integer.valueOf(6))}"
                android:textColor="@color/white"
                android:textSize="@dimen/_12msp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="0 BTC"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>