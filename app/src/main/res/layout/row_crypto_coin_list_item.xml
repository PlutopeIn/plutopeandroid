<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.app.plutope.model.Tokens" />

        <import type="com.app.plutope.utils.UtilsKt" />
    </data>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_crypto_coin"
            android:layout_width="@dimen/_35mdp"
            android:layout_height="@dimen/_40mdp"
            android:layout_marginStart="@dimen/_14mdp"
            android:src="@drawable/img_pluto_pe_logo_with_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/txt_crypto_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16mdp"
            android:layout_marginStart="@dimen/_15mdp"
            android:fontFamily="@font/violet_sans"

            android:text="@{model.t_symbol}"
            android:textColor="@color/black"
            android:textSize="@dimen/_16msp"
            app:layout_constraintStart_toEndOf="@id/img_crypto_coin"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="BTC"

            />


        <TextView
            android:id="@+id/txt_crypto_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_5mdp"
            android:paddingVertical="@dimen/_2mdp"
            android:text="@{model.t_type}"
            android:visibility="visible"
            android:fontFamily="@font/inter"
            android:textSize="@dimen/_10msp"
            android:background="@drawable/bg_corner_radius_4"
            android:backgroundTint="@color/tag_gray"
            android:textColor="@color/sub_title_gray"
            android:layout_marginStart="@dimen/_5mdp"
            app:layout_constraintBottom_toBottomOf="@id/txt_crypto_symbol"
            app:layout_constraintStart_toEndOf="@id/txt_crypto_symbol"
            app:layout_constraintTop_toTopOf="@id/txt_crypto_symbol"

            tools:text="Network name"

            />

        <TextView
            android:id="@+id/txt_crypto_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_19mdp"
            android:layout_marginTop="@dimen/_5mdp"
            android:fontFamily="@font/inter"
            android:text="@{model.t_name}"

            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_13msp"
            android:visibility="visible"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/txt_crypto_symbol"
            app:layout_constraintTop_toBottomOf="@+id/txt_crypto_symbol"
            app:layout_constraintVertical_bias="0.5"
            tools:text="Bitcoin"

            />


        <TextView
            android:id="@+id/txt_usd_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10mdp"
            android:fontFamily="@font/inter"
            android:text="@{UtilsKt.setBalanceText(Double.valueOf(model.t_balance),``,Integer.valueOf(6))}"
            android:textColor="@color/black"
            android:textSize="@dimen/_12msp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="0 BTC"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="@id/img_crypto_coin"
            app:layout_constraintEnd_toEndOf="@+id/txt_usd_price"
            android:background="@color/border_gray"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>