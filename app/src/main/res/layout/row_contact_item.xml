<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="contactModel"
            type="com.app.plutope.model.ContactModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_7mdp"
            android:layout_marginTop="@dimen/_15mdp"
            android:layout_marginEnd="@dimen/_10mdp"
            android:fontFamily="@font/violet_sans"
            android:textColor="@color/black"
            android:textSize="@dimen/_16msp"
            android:visibility="gone"
            android:text="@{contactModel.name}"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="guierwgi"

            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10mdp"
            android:layout_marginBottom="@dimen/_5mdp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="@dimen/_10mdp"
            android:background="@drawable/bg_corner_radius_35"
            app:layout_constraintTop_toBottomOf="@id/txt_header">


                <ImageView
                    android:id="@+id/img_bag"
                    android:layout_width="@dimen/_40mdp"
                    android:layout_height="@dimen/_40mdp"
                    android:layout_marginStart="@dimen/_13mdp"
                    android:src="@drawable/img_logo_circle_black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_transaction_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12mdp"
                    android:layout_marginTop="@dimen/_15mdp"
                    android:layout_marginEnd="@dimen/_20mdp"
                    android:fontFamily="@font/violet_sans"
                    android:text="@{contactModel.name}"
                    android:includeFontPadding="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@id/img_bag"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="guierwgi"

                    />

                <TextView
                    android:id="@+id/txt_transaction_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1mdp"
                    android:layout_marginEnd="@dimen/_70mdp"
                    android:layout_marginBottom="@dimen/_15mdp"
                    android:fontFamily="@font/violet_sans"
                    android:text="@{contactModel.address}"
                    android:includeFontPadding="true"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textColor="@color/bottom_icon_grey"
                    android:textSize="@dimen/_15msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/txt_transaction_name"
                    app:layout_constraintTop_toBottomOf="@id/txt_transaction_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="fiwegfhi fewbfuiewgrbfuiturh3uifewbfuiewgrbfuiturh3uifewbfuiewgrbfuiturh3uifewbfuiewgrbfuiturh3uifewbfuiewgrbfuiturh3uifewbfuiewgrbfuiturh3uifewbfuiewgrbfuiturh3uifewbfuiewgrbfuiturh3ui" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>