<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dashboardViewModel"
            type="com.app.plutope.ui.fragment.dashboard.DashboardViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        tools:context=".ui.fragment.dashboard.Dashboard">


        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55mdp"
                    android:background="@color/bg_white"
                    app:layout_collapseMode="pin">

                    <ImageView
                        android:id="@+id/img_pluto_pe"
                        android:layout_width="@dimen/_40mdp"
                        android:layout_height="@dimen/_40mdp"
                        android:layout_marginStart="@dimen/_23mdp"
                        android:layout_marginTop="@dimen/_14mdp"
                        android:background="@drawable/bg_circle_light_gray"
                        android:focusable="true"
                        android:foreground="@drawable/ripple_effect"
                        android:padding="@dimen/_10mdp"
                        android:src="@drawable/ic_pluto"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/txt_wallet_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10mdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/violet_sans"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_17msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="@id/img_pluto_pe"
                        app:layout_constraintEnd_toStartOf="@id/img_scan"
                        app:layout_constraintStart_toEndOf="@id/img_pluto_pe"
                        app:layout_constraintTop_toTopOf="@id/img_pluto_pe"
                        tools:text="@string/wallet" />

                    <ImageView
                        android:id="@+id/img_search"
                        android:layout_width="@dimen/_40mdp"
                        android:layout_height="@dimen/_40mdp"
                        android:layout_marginTop="@dimen/_14mdp"
                        android:layout_marginEnd="@dimen/_20mdp"
                        android:focusable="true"
                        android:foreground="@drawable/ripple_effect"
                        android:src="@drawable/ic_search_with_bg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/img_scan"
                        android:layout_width="@dimen/_40mdp"
                        android:layout_height="@dimen/_40mdp"
                        android:layout_marginEnd="@dimen/_8mdp"
                        android:focusable="true"
                        android:foreground="@drawable/ripple_effect"
                        android:src="@drawable/ic_scan_with_bg"
                        app:layout_constraintEnd_toStartOf="@id/img_search"
                        app:layout_constraintTop_toTopOf="@id/img_search" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_55mdp"
                    android:background="@color/bg_white"
                    app:layout_collapseMode="parallax">

                    <!-- <ImageView
                         android:id="@+id/img_pluto_pe"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginStart="@dimen/_23mdp"
                         android:layout_marginTop="@dimen/_14mdp"
                         android:src="@drawable/img_logo_circle_with_gray_bg"
                         app:layout_constraintStart_toStartOf="parent"
                         app:layout_constraintTop_toTopOf="parent" />

                     <ImageView
                         android:id="@+id/img_search"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="@dimen/_14mdp"
                         android:layout_marginEnd="@dimen/_20mdp"
                         android:src="@drawable/ic_search_with_bg"
                         app:layout_constraintEnd_toEndOf="parent"
                         app:layout_constraintTop_toTopOf="parent" />

                     <ImageView
                         android:id="@+id/img_scan"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginEnd="@dimen/_8mdp"
                         android:src="@drawable/ic_scan_with_bg"
                         app:layout_constraintEnd_toStartOf="@id/img_search"
                         app:layout_constraintTop_toTopOf="@id/img_search" />-->

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15mdp"
                        android:layout_marginTop="@dimen/_20mdp"
                        app:cardBackgroundColor="@color/header_blue"
                        app:cardCornerRadius="@dimen/_15mdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txtWalletName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_26mdp"
                                android:drawablePadding="@dimen/_6mdp"
                                android:fontFamily="@font/inter"
                                android:lineHeight="@dimen/_36mdp"
                                android:text="@string/total_balance"
                                android:textColor="@color/white_both_themed"
                                android:textSize="@dimen/_17msp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/img_hide_show"
                                android:layout_width="@dimen/_28mdp"
                                android:layout_height="@dimen/_28mdp"
                                android:focusable="true"
                                android:foreground="@drawable/ripple_effect"
                                android:padding="@dimen/_9mdp"
                                android:src="@drawable/ic_eye_hide"
                                app:layout_constraintBottom_toBottomOf="@id/txtWalletName"
                                app:layout_constraintStart_toEndOf="@id/txtWalletName"
                                app:layout_constraintTop_toTopOf="@id/txtWalletName"
                                app:tint="@color/white_both_themed" />

                            <TextView
                                android:id="@+id/txtCurrentBalanceValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_8mdp"
                                android:layout_marginTop="@dimen/_10mdp"
                                android:ellipsize="end"
                                android:fontFamily="@font/violet_sans"
                                android:includeFontPadding="false"
                                android:singleLine="true"
                                android:textColor="@color/white_both_themed"
                                android:textSize="@dimen/_40msp"
                                app:layout_constrainedWidth="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/txtWalletName"
                                tools:text="51" />

                            <TextView
                                android:id="@+id/txtWalletAddress"
                                android:layout_width="@dimen/_140mdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10mdp"
                                android:background="@drawable/bg_copy"
                                android:drawablePadding="@dimen/_5mdp"
                                android:ellipsize="middle"
                                android:fontFamily="@font/inter"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="@dimen/_10mdp"
                                android:paddingVertical="@dimen/_2mdp"
                                android:singleLine="true"
                                android:textColor="@color/white_both_themed"
                                android:textSize="@dimen/_12msp"
                                app:drawableEndCompat="@drawable/ic_copy_new"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/txtCurrentBalanceValue"
                                tools:text="0xajdhsahsd" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_buttons"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_20mdp"
                                android:layout_marginTop="@dimen/_23mdp"
                                android:layout_marginBottom="@dimen/_19mdp"
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/txtWalletAddress"
                                tools:itemCount="5"
                                tools:listitem="@layout/row_dashboard_header_buttons" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:paddingTop="@dimen/_20mdp"
                app:layout_collapseMode="pin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardInfo">

                <ImageView
                    android:id="@+id/imgAddCustomToken"
                    android:layout_width="@dimen/_30mdp"
                    android:layout_height="@dimen/_30mdp"
                    android:layout_marginEnd="@dimen/_20mdp"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_effect"
                    android:padding="@dimen/_4mdp"
                    android:src="@drawable/ic_plus_circle"
                    app:layout_constraintBottom_toBottomOf="@id/tabLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tabLayout"
                    app:tint="@color/black" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="@dimen/_200mdp"
                    android:layout_height="@dimen/_42mdp"
                    android:layout_marginStart="@dimen/_26mdp"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:layout_marginBottom="@dimen/_23mdp"
                    android:background="@color/transparent"
                    android:foreground="@null"
                    android:textSize="@dimen/_14msp"
                    app:layout_collapseMode="pin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tabBackground="@drawable/selecter_tab_item"
                    app:tabIndicator="@null"
                    app:tabMode="fixed"
                    app:tabRippleColor="@null"
                    app:tabSelectedTextColor="@color/bg_white"
                    app:tabTextAppearance="@style/App_tab"
                    app:tabTextColor="@drawable/tab_text_color_selector" />

                <!-- <View
                     android:id="@+id/divider"
                     android:layout_width="match_parent"
                     android:layout_height="0.5dp"
                     android:layout_marginTop="@dimen/_23mdp"
                     android:background="@color/border_gray"
                     app:layout_collapseMode="pin"
                     app:layout_constrainedWidth="true"
                     android:layout_marginHorizontal="@dimen/_26mdp"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintTop_toBottomOf="@+id/tabLayout" />

 -->
            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.appbar.AppBarLayout>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_1mdp"
            android:background="@color/bg_white"
            android:nestedScrollingEnabled="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
