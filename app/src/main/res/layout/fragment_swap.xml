                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:background="@drawable/background_white_border_12"
                    android:elevation="@dimen/_12mdp"
                    android:minWidth="@dimen/_150mdp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toStartOf="@id/guidline_you_get_price"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="@+id/txt_balance_swapped"
                    app:layout_constraintTop_toBottomOf="@+id/txt_balance_swapped">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_coin_swapped"
                        android:layout_width="@dimen/_37mdp"
                        android:layout_height="@dimen/_37mdp"
                        android:layout_marginBottom="@dimen/_19mdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_coin_name_swapped"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7mdp"
                        android:layout_marginEnd="@dimen/_10mdp"
                        android:fontFamily="@font/violet_sans"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"

                        android:textSize="@dimen/_14msp"
                        app:layout_constraintStart_toEndOf="@id/img_coin_swapped"
                        app:layout_constraintTop_toTopOf="@+id/img_coin_swapped"
                        tools:text="@string/ethereum" />

                    <TextView
                        android:id="@+id/txt_chain_name_swapped"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7mdp"
                        android:layout_marginTop="@dimen/_5mdp"
                        android:layout_marginEnd="@dimen/_10mdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/violet_sans"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/sub_title_gray"
                        android:textSize="@dimen/_12msp"
                        app:layout_constrainedWidth="true"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toEndOf="@id/img_coin_swapped"
                        app:layout_constraintTop_toBottomOf="@+id/txt_coin_name_swapped"
                        tools:text="BitcoinBitcoinBitcoinBitcoin" />

                    <TextView
                        android:id="@+id/txt_network_name_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4mdp"
                        android:background="@drawable/bg_gray_border_radius_2"
                        android:fontFamily="@font/violet_sans"
                        android:padding="@dimen/_2mdp"
                        android:paddingHorizontal="@dimen/_2mdp"
                        android:paddingVertical="@dimen/_1mdp"

                        android:text="@string/you_get"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_7msp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@id/txt_coin_name_swapped"
                        app:layout_constraintStart_toEndOf="@id/txt_coin_name_swapped"
                        app:layout_constraintTop_toTopOf="@id/txt_coin_name_swapped"
                        tools:text="BTC"

                        />


                    <ImageView
                        android:id="@+id/img_forword_swapped"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5mdp"
                        android:src="@drawable/ic_arrow_down"
                        app:layout_constraintBottom_toBottomOf="@+id/txt_coin_name_swapped"
                        app:layout_constraintStart_toEndOf="@+id/txt_network_name_bottom"
                        app:layout_constraintTop_toTopOf="@+id/txt_coin_name_swapped"
                        app:tint="@color/black" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/txt_you_pay_swapped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16mdp"
                    android:layout_marginEnd="@dimen/_17mdp"
                    android:fontFamily="@font/inter"
                    android:text="@string/you_get"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_13msp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_you_get"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5mdp"
                    android:layout_marginTop="@dimen/_6mdp"
                    android:layout_marginEnd="@dimen/_17mdp"
                    android:background="@null"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/violet_sans"
                    android:gravity="end"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:textColor="@color/sub_title_gray"
                    android:textColorHint="@color/sub_title_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/_13msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/guidline_you_get_price"
                    app:layout_constraintTop_toBottomOf="@id/txt_you_pay_swapped"
                    tools:text="$0 BTC"

                    />

                <TextView
                    android:id="@+id/txt_converted_you_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7mdp"
                    android:layout_marginBottom="@dimen/_16mdp"
                    android:background="@drawable/bg_transparent_green"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter"
                    android:maxWidth="@dimen/_180mdp"
                    android:maxLines="2"
                    android:paddingHorizontal="@dimen/_7mdp"

                    android:paddingVertical="@dimen/_2mdp"
                    android:textColor="@color/green_00A323"
                    android:textSize="@dimen/_11msp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/edt_you_get"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toStartOf="@id/guidline_you_get_price"
                    app:layout_constraintTop_toBottomOf="@id/edt_you_get"
                    app:layout_constraintVertical_bias="0"
                    tools:text="asd" />


                <ProgressBar
                    android:id="@+id/progress_amount"
                    android:layout_width="@dimen/_20mdp"
                    android:layout_height="@dimen/_20mdp"
                    android:layout_marginEnd="@dimen/_30mdp"
                    android:indeterminateTint="@color/header_blue"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_you_pay_swapped" />


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidline_you_get_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.50" />

                <TextView
                    android:id="@+id/txt_balance_swapped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18mdp"
                    android:layout_marginTop="@dimen/_18mdp"
                    android:fontFamily="@font/violet_sans"
                    android:text="@string/balance"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_13msp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_you_get_balance_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4mdp"
                    android:layout_marginEnd="@dimen/_5mdp"
                    android:fontFamily="@font/violet_sans"
                    android:text="0"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_13msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="@id/txt_balance_swapped"
                    app:layout_constraintEnd_toStartOf="@id/guidline_you_get_price"
                    app:layout_constraintStart_toEndOf="@id/txt_balance_swapped"
                    app:layout_constraintTop_toTopOf="@id/txt_balance_swapped"

                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_swap_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10mdp"
                android:src="@drawable/ic_swap_black_bg"
                app:layout_constraintBottom_toTopOf="@id/card_2"
                app:layout_constraintEnd_toEndOf="@id/card_1"
                app:layout_constraintStart_toStartOf="@id/card_1"
                app:layout_constraintTop_toBottomOf="@id/card_1" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_min_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24mdp"
                android:background="@drawable/bg_gray_border_radius_8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_provider_not_found">

                <TextView
