<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="swapViewModel"
            type="com.app.plutope.ui.fragment.transactions.swap.SwapViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:fillViewport="true"
        android:fitsSystemWindows="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.fragment.transactions.swap.Swap">

            <include
                android:id="@+id/linear_progress"
                layout="@layout/progress_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30mdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_122mdp"
                android:layout_marginHorizontal="@dimen/_16mdp"
                android:layout_marginTop="@dimen/_50mdp"
                app:cardBackgroundColor="@color/purple_25264D"
                app:cardCornerRadius="@dimen/_10mdp"
                app:layout_constraintTop_toBottomOf="@id/linear_progress">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_inner_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10mdp"
                        android:layout_marginTop="@dimen/_32mdp"
                        android:layout_marginEnd="@dimen/_20mdp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="@dimen/_12mdp"
                        app:cardElevation="@dimen/_12mdp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toStartOf="@id/txt_you_pay"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_white_border_12"
                            android:elevation="@dimen/_12mdp"
                            android:minWidth="@dimen/_150mdp">

                            <ImageView
                                android:id="@+id/img_coin"
                                android:layout_width="@dimen/_23mdp"
                                android:layout_height="@dimen/_26mdp"
                                android:layout_marginStart="@dimen/_6mdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:src="@drawable/img_bitcoin" />

                            <TextView
                                android:id="@+id/txt_coin_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_9mdp"
                                android:layout_marginStart="@dimen/_7mdp"
                                android:layout_marginEnd="@dimen/_10mdp"
                                android:gravity="center_vertical"
                                android:textColor="@color/white"
                                app:layout_constrainedWidth="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/img_forword"
                                app:layout_constraintHorizontal_bias="0"
                                app:layout_constraintStart_toEndOf="@id/img_coin"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="Bitcoin" />


                            <TextView
                                android:id="@+id/txt_network_name_top"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5mdp"
                                android:background="@drawable/bg_corner_radius_2"
                                android:fontFamily="@font/quicksand_regular"
                                android:paddingHorizontal="@dimen/_2mdp"
                                android:paddingVertical="@dimen/_1mdp"
                                android:text="@string/you_pay"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10msp"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="@id/txt_coin_name"
                                app:layout_constraintStart_toEndOf="@id/txt_coin_name"
                                app:layout_constraintTop_toTopOf="@id/txt_coin_name"

                                />


                            <ImageView
                                android:id="@+id/img_forword"
                                android:layout_width="@dimen/_5mdp"
                                android:layout_height="@dimen/_10mdp"
                                android:layout_marginEnd="@dimen/_12mdp"
                                android:src="@drawable/ic_forword_new"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="1"
                                app:layout_constraintTop_toTopOf="parent" />


                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/txt_you_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_40mdp"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="@string/you_pay"
                        android:textColor="@color/purple_7576D"
                        android:textSize="@dimen/_10msp"
                        app:layout_constraintEnd_toEndOf="@id/edt_you_pay"
                        app:layout_constraintTop_toTopOf="parent"

                        />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edt_you_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5mdp"
                        android:layout_marginTop="@dimen/_8mdp"
                        android:layout_marginEnd="@dimen/_20mdp"
                        android:background="@null"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="end"
                        android:hint="0"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/_18msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/guidline_middle_price"
                        app:layout_constraintTop_toBottomOf="@id/txt_you_pay"
                        tools:text="$19.56"

                        />

                    <TextView
                        android:id="@+id/txt_converted_you_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5mdp"
                        android:fontFamily="@font/quicksand_regular"
                        android:textColor="@color/purple_7576D"
                        android:textSize="@dimen/_10msp"
                        app:layout_constraintEnd_toEndOf="@id/edt_you_pay"
                        app:layout_constraintTop_toBottomOf="@id/edt_you_pay"

                        />


                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidline_middle_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.45" />

                    <TextView
                        android:id="@+id/txt_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_9mdp"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="@string/balance"
                        android:textColor="@color/purple_7576D"
                        android:textSize="@dimen/_10msp"
                        app:layout_constraintStart_toStartOf="@id/card_inner_coin"
                        app:layout_constraintTop_toBottomOf="@id/card_inner_coin" />

                    <TextView
                        android:id="@+id/txt_from_balance_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4mdp"
                        android:layout_marginEnd="@dimen/_5mdp"
                        android:fontFamily="@font/quicksand_semibold"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="@id/txt_balance"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toEndOf="@id/txt_balance"
                        app:layout_constraintTop_toTopOf="@id/txt_balance"

                        />

                    <TextView
                        android:id="@+id/txt_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8mdp"
                        android:layout_marginEnd="@dimen/_8mdp"
                        android:fontFamily="@font/quicksand_semibold"
                        android:text="Max"
                        android:textColor="@color/blue_22d1ee"
                        android:textSize="@dimen/_13msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="@id/txt_balance"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toEndOf="@id/txt_from_balance_value"
                        app:layout_constraintTop_toTopOf="@id/txt_balance"

                        />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_122mdp"
                android:layout_marginHorizontal="@dimen/_16mdp"
                android:layout_marginTop="@dimen/_5mdp"
                app:cardBackgroundColor="@color/purple_25264D"
                app:cardCornerRadius="@dimen/_10mdp"
                app:layout_constraintTop_toBottomOf="@id/card_1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_inner_coin_swapped"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10mdp"
                        android:layout_marginTop="@dimen/_32mdp"
                        android:layout_marginEnd="@dimen/_20mdp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="@dimen/_12mdp"
                        app:cardElevation="@dimen/_12mdp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toStartOf="@id/txt_you_pay_swapped"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_white_border_12"
                            android:elevation="@dimen/_12mdp"
                            android:minWidth="@dimen/_150mdp">

                            <ImageView
                                android:id="@+id/img_coin_swapped"
                                android:layout_width="@dimen/_23mdp"
                                android:layout_height="@dimen/_26mdp"
                                android:layout_marginStart="@dimen/_6mdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:src="@drawable/img_ethereum" />

                            <TextView
                                android:id="@+id/txt_coin_name_swapped"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_9mdp"
                                android:layout_marginStart="@dimen/_7mdp"
                                android:layout_marginEnd="@dimen/_10mdp"
                                android:gravity="center_vertical"
                                android:textColor="@color/white"
                                app:layout_constrainedWidth="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/img_forword_swapped"
                                app:layout_constraintHorizontal_bias="0"
                                app:layout_constraintStart_toEndOf="@id/img_coin_swapped"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="@string/ethereum" />

                            <TextView
                                android:id="@+id/txt_network_name_bottom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5mdp"
                                android:background="@drawable/bg_corner_radius_2"
                                android:fontFamily="@font/quicksand_regular"
                                android:paddingHorizontal="@dimen/_2mdp"
                                android:paddingVertical="@dimen/_1mdp"
                                android:text="@string/you_pay"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10msp"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="@id/txt_coin_name_swapped"
                                app:layout_constraintStart_toEndOf="@id/txt_coin_name_swapped"
                                app:layout_constraintTop_toTopOf="@id/txt_coin_name_swapped"

                                />


                            <ImageView
                                android:id="@+id/img_forword_swapped"
                                android:layout_width="@dimen/_5mdp"
                                android:layout_height="@dimen/_10mdp"
                                android:layout_marginEnd="@dimen/_12mdp"
                                android:src="@drawable/ic_forword_new"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="1"
                                app:layout_constraintTop_toTopOf="parent" />


                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/txt_you_pay_swapped"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_40mdp"
                        android:layout_marginEnd="@dimen/_20mdp"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="@string/you_get"
                        android:textColor="@color/purple_7576D"
                        android:textSize="@dimen/_10msp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edt_you_get"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5mdp"
                        android:layout_marginTop="@dimen/_8mdp"
                        android:layout_marginEnd="@dimen/_20mdp"
                        android:background="@null"
                        android:enabled="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="end"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/_18msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/guidline_you_get_price"
                        app:layout_constraintTop_toBottomOf="@id/txt_you_pay_swapped"
                        tools:text="$0 BTC"

                        />

                    <TextView
                        android:id="@+id/txt_converted_you_get"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5mdp"
                        android:fontFamily="@font/quicksand_regular"
                        android:textColor="@color/purple_7576D"
                        android:textSize="@dimen/_10msp"
                        app:layout_constraintEnd_toEndOf="@id/edt_you_get"
                        app:layout_constraintTop_toBottomOf="@id/edt_you_get"

                        />


                    <ProgressBar
                        android:id="@+id/progress_amount"
                        android:layout_width="@dimen/_20mdp"
                        android:layout_height="@dimen/_20mdp"
                        android:layout_marginEnd="@dimen/_30mdp"
                        android:indeterminateTint="@color/blue_00C6FB"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_you_pay_swapped" />


                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidline_you_get_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.45" />

                    <TextView
                        android:id="@+id/txt_balance_swapped"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_9mdp"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="@string/balance"
                        android:textColor="@color/purple_7576D"
                        android:textSize="@dimen/_10msp"
                        app:layout_constraintStart_toStartOf="@id/card_inner_coin_swapped"
                        app:layout_constraintTop_toBottomOf="@id/card_inner_coin_swapped" />

                    <TextView
                        android:id="@+id/txt_you_get_balance_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4mdp"
                        android:layout_marginEnd="@dimen/_5mdp"
                        android:fontFamily="@font/quicksand_semibold"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="@id/txt_balance_swapped"
                        app:layout_constraintEnd_toStartOf="@id/guidline_you_get_price"
                        app:layout_constraintStart_toEndOf="@id/txt_balance_swapped"
                        app:layout_constraintTop_toTopOf="@id/txt_balance_swapped"

                        />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_swap_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10mdp"
                android:src="@drawable/ic_swapping_vertical"
                app:layout_constraintBottom_toTopOf="@id/card_2"
                app:layout_constraintEnd_toEndOf="@id/card_1"
                app:layout_constraintStart_toStartOf="@id/card_1"
                app:layout_constraintTop_toBottomOf="@id/card_1" />


            <TextView
                android:id="@+id/txt_first_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_45mdp"
                android:layout_marginEnd="@dimen/_8mdp"
                android:fontFamily="@font/quicksand_semibold"
                android:gravity="center"
                android:text="1 BTC ≈"
                android:textColor="@color/white"
                android:textSize="@dimen/_15msp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="@id/card_2"
                app:layout_constraintStart_toStartOf="@id/card_2"
                app:layout_constraintTop_toBottomOf="@id/card_2"

                />

            <!-- <ImageView
                 android:id="@+id/img_swap_equal"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/_45mdp"
                 android:src="@drawable/ic_swap_equal"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toBottomOf="@id/card_2" />


             <TextView
                 android:id="@+id/txt_second_price"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="@dimen/_8mdp"
                 android:fontFamily="@font/quicksand_semibold"
                 android:text="14.14 ETH"
                 android:textColor="@color/white"
                 android:textSize="@dimen/_15msp"
                 app:layout_constrainedWidth="true"
                 app:layout_constraintBottom_toBottomOf="@id/img_swap_equal"
                 app:layout_constraintEnd_toEndOf="@id/card_2"
                 app:layout_constraintStart_toEndOf="@id/img_swap_equal"
                 app:layout_constraintTop_toTopOf="@id/img_swap_equal"

                 />-->

            <androidx.cardview.widget.CardView
                android:id="@+id/card_best_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16mdp"
                android:layout_marginTop="@dimen/_20mdp"
                app:cardBackgroundColor="@color/purple_25264D"
                app:cardCornerRadius="@dimen/_10mdp"
                app:layout_constraintEnd_toEndOf="@id/card_2"
                app:layout_constraintStart_toStartOf="@id/card_2"
                app:layout_constraintTop_toBottomOf="@id/txt_first_price">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_best_provider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_60mdp">

                    <TextView
                        android:id="@+id/txt_best_quote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10mdp"
                        android:layout_marginEnd="@dimen/_8mdp"
                        android:fontFamily="@font/quicksand_semibold"
                        android:gravity="center"
                        android:text="@string/using_the_best_quote"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        />

                    <TextView
                        android:id="@+id/txt_view_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10mdp"
                        android:layout_marginEnd="@dimen/_10mdp"
                        android:fontFamily="@font/quicksand_semibold"
                        android:gravity="center"
                        android:text="View details->"
                        android:textColor="@color/blue_00C6FB"
                        android:textSize="@dimen/_13msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/btn_swap"
                style="@style/wallet_button_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_30mdp"
                android:layout_marginTop="@dimen/_67mdp"
                android:layout_marginBottom="@dimen/_20mdp"
                android:text="@string/preview_swap"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_best_provider"
                app:layout_constraintVertical_bias="0" />

            <ProgressBar
                android:id="@+id/progress_token"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:elevation="@dimen/_10mdp"
                android:indeterminateTint="@color/blue_00C6FB"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>