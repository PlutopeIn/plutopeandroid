<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="swapViewModel"
            type="com.app.plutope.ui.fragment.transactions.swap.SwapViewModel" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.fragment.transactions.swap.Swap">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="@dimen/_50mdp"
                    android:layout_height="@dimen/_50mdp"
                    android:layout_marginStart="@dimen/_10mdp"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_effect"
                    android:padding="@dimen/_8mdp"
                    android:src="@drawable/ic_back_new"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    />

                <TextView
                    android:id="@+id/txt_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/violet_sans"
                    android:text="@string/swap"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_20msp"
                    app:layout_constraintBottom_toBottomOf="@id/img_back"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/img_back" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/txt_label_quick_swap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16mdp"
                android:layout_marginTop="@dimen/_44mdp"
                android:fontFamily="@font/violet_sans"

                android:text="@string/quick_swap"
                android:textColor="@color/black"
                android:textSize="@dimen/_17msp"
                app:layout_constraintTop_toBottomOf="@id/layout_toolbar" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_quick_swap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10mdp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/txt_label_quick_swap"
                app:layout_constraintTop_toBottomOf="@id/txt_label_quick_swap"
                tools:listitem="@layout/row_quick_swap" />

            <TextView
                android:id="@+id/txt_label_custom_swap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16mdp"
                android:layout_marginTop="@dimen/_45mdp"
                android:fontFamily="@font/violet_sans"

                android:text="@string/custom_swap"
                android:textColor="@color/black"
                android:textSize="@dimen/_17msp"
                app:layout_constraintTop_toBottomOf="@id/rv_quick_swap" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16mdp"
                android:layout_marginTop="@dimen/_13mdp"
                android:background="@drawable/bg_border_card_radius_23"
                app:layout_constraintTop_toBottomOf="@id/txt_label_custom_swap">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/card_inner_coin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:background="@drawable/background_white_border_12"
                    android:elevation="@dimen/_12mdp"
                    android:minWidth="@dimen/_150mdp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toStartOf="@id/guidline_middle_price"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="@+id/txt_balance"
                    app:layout_constraintTop_toBottomOf="@+id/txt_balance">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_coin"
                        android:layout_width="@dimen/_37mdp"
                        android:layout_height="@dimen/_37mdp"
                        android:layout_marginBottom="@dimen/_19mdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/img_bitcoin" />

                    <TextView
                        android:id="@+id/txt_coin_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7mdp"
                        android:fontFamily="@font/violet_sans"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14msp"

                        app:layout_constrainedWidth="true"
                        app:layout_constraintStart_toEndOf="@id/img_coin"
                        app:layout_constraintTop_toTopOf="@+id/img_coin"
                        tools:text="Bitcoin" />

                    <TextView
                        android:id="@+id/txt_chain_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7mdp"
                        android:layout_marginTop="@dimen/_5mdp"
                        android:layout_marginEnd="@dimen/_10mdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/violet_sans"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/sub_title_gray"
                        android:textSize="@dimen/_12msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toEndOf="@id/img_coin"
                        app:layout_constraintTop_toBottomOf="@+id/txt_coin_name"
                        tools:text="Bitcoin gfgfdhgjgnjiore gfiognjior gfdiojiog gbopighjpoj" />

                    <TextView
                        android:id="@+id/txt_network_name_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4mdp"
                        android:background="@drawable/bg_gray_border_radius_2"
                        android:fontFamily="@font/violet_sans"

                        android:padding="@dimen/_2mdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_7msp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@+id/txt_coin_name"
                        app:layout_constraintStart_toEndOf="@+id/txt_coin_name"
                        app:layout_constraintTop_toTopOf="@+id/txt_coin_name"
                        tools:text="BTC"

                        />


                    <ImageView
                        android:id="@+id/img_forword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5mdp"
                        android:src="@drawable/ic_arrow_down"
                        app:layout_constraintBottom_toBottomOf="@+id/txt_coin_name"
                        app:layout_constraintStart_toEndOf="@+id/txt_network_name_top"
                        app:layout_constraintTop_toTopOf="@+id/txt_coin_name"
                        app:tint="@color/black" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/txt_you_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16mdp"
                    android:fontFamily="@font/inter"
                    android:text="@string/you_pay"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_13msp"
                    app:layout_constraintEnd_toEndOf="@id/edt_you_pay"
                    app:layout_constraintTop_toTopOf="parent"

                    />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_you_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5mdp"
                    android:layout_marginTop="@dimen/_6mdp"
                    android:layout_marginEnd="@dimen/_17mdp"
                    android:background="@null"
                    android:fontFamily="@font/violet_sans"
                    android:gravity="end"
                    android:hint="0"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:textColor="@color/sub_title_gray"
                    android:textColorHint="@color/sub_title_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/_13msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/guidline_middle_price"
                    app:layout_constraintTop_toBottomOf="@id/txt_you_pay"
                    tools:text="$19.56$19.56"

                    />


                <TextView
                    android:id="@+id/txt_converted_you_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7mdp"
                    android:layout_marginBottom="@dimen/_16mdp"
                    android:background="@drawable/bg_transparent_green"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter"
                    android:maxWidth="@dimen/_180mdp"

                    android:maxLines="2"
                    android:paddingHorizontal="@dimen/_7mdp"
                    android:paddingVertical="@dimen/_2mdp"
                    android:textColor="@color/green_00A323"
                    android:textSize="@dimen/_11msp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/edt_you_pay"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toStartOf="@id/guidline_middle_price"
                    app:layout_constraintTop_toBottomOf="@id/edt_you_pay"
                    app:layout_constraintVertical_bias="0"
                    tools:text="asdj" />


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidline_middle_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.50" />

                <TextView
                    android:id="@+id/txt_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18mdp"
                    android:layout_marginTop="@dimen/_18mdp"
                    android:fontFamily="@font/violet_sans"
                    android:text="@string/balance"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_13msp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_from_balance_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4mdp"
                    android:fontFamily="@font/violet_sans"
                    android:text="0"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_13msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="@id/txt_balance"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@id/txt_balance"
                    app:layout_constraintTop_toTopOf="@id/txt_balance"

                    />

                <!--<TextView
                    android:id="@+id/txt_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8mdp"
                    android:layout_marginTop="@dimen/_15mdp"
                    android:fontFamily="@font/quicksand_semibold"
                    android:text="@string/max_small"
                    android:textColor="@color/header_blue"
                    android:textSize="@dimen/_14msp"
                    android:visibility="gone"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="@id/txt_balance"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@id/txt_from_balance_value"
                    app:layout_constraintTop_toTopOf="parent"

                    />-->


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
