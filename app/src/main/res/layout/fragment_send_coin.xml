<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="sendCoinViewModel"
            type="com.app.plutope.ui.fragment.transactions.send.send_coin.SendCoinViewModel" />

        <variable
            name="model"
            type="com.app.plutope.model.Tokens" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_50mdp"
                android:layout_height="@dimen/_50mdp"
                android:layout_marginStart="@dimen/_10mdp"
                android:layout_marginTop="@dimen/_10mdp"
                android:focusable="true"
                android:foreground="@drawable/ripple_effect"
                android:padding="@dimen/_8mdp"
                android:src="@drawable/ic_back_new"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:id="@+id/txt_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/violet_sans"
                android:textColor="@color/black"
                android:textSize="@dimen/_20msp"
                app:layout_constraintBottom_toBottomOf="@id/img_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_back"
                tools:text="kalsdjlakjd" />


            <ImageView
                android:id="@+id/img_scanner"
                android:layout_width="@dimen/_40mdp"
                android:layout_height="@dimen/_40mdp"
                android:layout_marginEnd="@dimen/_15mdp"
                android:src="@drawable/ic_scan_with_bg"
                app:layout_constraintBottom_toBottomOf="@id/txt_toolbar_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_toolbar_title" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_white"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_toolbar">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/const_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".ui.fragment.transactions.send.send_coin.SendCoin">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_coin"
                    android:layout_width="@dimen/_106mdp"
                    android:layout_height="@dimen/_106mdp"
                    android:layout_marginTop="@dimen/_45mdp"
                    android:src="@drawable/img_pluto_pe_logo_with_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    />

                <TextView
                    android:id="@+id/txt_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_22mdp"
                    android:fontFamily="@font/violet_sans"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_30msp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img_coin"
                    tools:text=""

                    />

                <TextView
                    android:id="@+id/txt_network_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6mdp"
                    android:background="@drawable/bg_corner_radius_4"
                    android:backgroundTint="@color/tag_gray"
                    android:fontFamily="@font/inter"
                    android:paddingHorizontal="@dimen/_4mdp"
                    android:paddingVertical="@dimen/_1mdp"
                    android:text="@string/you_pay"
                    android:textColor="@color/sub_title_gray"
                    android:textSize="@dimen/_11msp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@id/txt_balance"
                    app:layout_constraintStart_toEndOf="@id/txt_balance"
                    app:layout_constraintTop_toTopOf="@id/txt_balance"

                    />


                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5mdp"
                    android:layout_marginEnd="@dimen/_3mdp"
                    android:fontFamily="@font/inter"
                    android:gravity="end"
                    android:textColor="@color/sub_title_gray"
                    android:textSize="@dimen/_16msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_balance"
                    tools:text="$19.564" />


                <TextView
                    android:id="@+id/txt_address_or_naming_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_40mdp"
                    android:layout_marginTop="@dimen/_54mdp"
                    android:fontFamily="@font/violet_sans"
                    android:text="@string/address_or_naming_service"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_price" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_contract_address"
                    style="@style/edittext_fill_bg_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20mdp"
                    android:layout_marginTop="@dimen/_8mdp"
                    android:fontFamily="@font/violet_sans"
                    android:inputType="textNoSuggestions"
                    android:maxLines="1"
                    android:minHeight="@dimen/_45mdp"
                    android:paddingVertical="@dimen/_17mdp"
                    android:paddingStart="@dimen/_25mdp"
                    android:paddingEnd="@dimen/_130mdp"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/_14msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_address_or_naming_service"
                    tools:text="12345678912345678912345678945654644564"

                    />

                <!-- <ImageView
                     android:id="@+id/img_scanner"
                     android:layout_width="@dimen/_17mdp"
                     android:layout_height="@dimen/_17mdp"
                     android:layout_marginEnd="@dimen/_16mdp"
                     android:src="@drawable/img_scanner"
                     app:layout_constraintBottom_toBottomOf="@id/edt_contract_address"
                     app:layout_constraintEnd_toStartOf="@id/img_contact"
                     app:layout_constraintTop_toTopOf="@id/edt_contract_address"
                     app:tint="@color/black" />-->


                <ImageView
                    android:id="@+id/txt_paste"
                    android:layout_width="@dimen/_21mdp"
                    android:layout_height="@dimen/_24mdp"
                    android:layout_marginEnd="@dimen/_10mdp"
                    android:focusable="true"
                    android:fontFamily="@font/inter"
                    android:foreground="@drawable/ripple_effect"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_paste_new"
                    app:layout_constrainedHeight="true"
                    app:layout_constraintBottom_toBottomOf="@id/edt_contract_address"
                    app:layout_constraintEnd_toStartOf="@id/img_contact"
                    app:layout_constraintTop_toTopOf="@id/edt_contract_address" />


                <ImageView
                    android:id="@+id/img_contact"
                    android:layout_width="@dimen/_45mdp"
                    android:layout_height="@dimen/_45mdp"
                    android:layout_marginEnd="@dimen/_5mdp"
                    android:background="@drawable/ic_circle_green"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="@dimen/_9mdp"
                    android:src="@drawable/ic_contact_user"
                    app:layout_constraintBottom_toBottomOf="@id/edt_contract_address"
                    app:layout_constraintEnd_toEndOf="@id/edt_contract_address"
                    app:layout_constraintTop_toTopOf="@id/edt_contract_address" />


                <TextView
                    android:id="@+id/amount_btc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40mdp"
                    android:fontFamily="@font/violet_sans"
                    android:text='@{@string/amount_label+` `+model.t_symbol}'
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintStart_toStartOf="@id/txt_address_or_naming_service"
                    app:layout_constraintTop_toBottomOf="@id/edt_contract_address"
                    tools:text="Amount" />


                <EditText
                    android:id="@+id/edt_amount"
                    style="@style/edittext_fill_bg_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8mdp"
                    android:digits="0123456789."
                    android:fontFamily="@font/violet_sans"
                    android:inputType="numberDecimal"
                    android:minHeight="@dimen/_45mdp"
                    android:paddingVertical="@dimen/_17mdp"
                    android:paddingStart="@dimen/_25mdp"
                    android:paddingEnd="@dimen/_150mdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/_14msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="@id/edt_contract_address"
                    app:layout_constraintStart_toStartOf="@id/edt_contract_address"
                    app:layout_constraintTop_toBottomOf="@id/amount_btc"
                    tools:text="12345"

                    />

                <!--  <TextView
                      android:id="@+id/txt_coin_type"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_marginEnd="@dimen/_12mdp"
                      android:fontFamily="@font/inter"
                      android:gravity="center_vertical"
                      android:text="@{model.t_symbol}"
                      android:textColor="@color/header_blue"
                      android:textSize="@dimen/_13msp"
                      app:layout_constrainedHeight="true"
                      app:layout_constraintBottom_toBottomOf="@id/edt_amount"
                      app:layout_constraintEnd_toEndOf="@id/edt_amount"
                      app:layout_constraintTop_toTopOf="@id/edt_amount"
                      tools:text="BTC" />-->

                <TextView
                    android:id="@+id/txt_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_12mdp"
                    android:fontFamily="@font/violet_sans"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="@string/max"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15msp"
                    app:layout_constrainedHeight="true"
                    app:layout_constraintBottom_toBottomOf="@id/edt_amount"
                    app:layout_constraintEnd_toStartOf="@id/layout_swap"
                    app:layout_constraintTop_toTopOf="@id/edt_amount" />

                <View
                    android:id="@+id/max_underline"
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/black"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="@id/txt_max"
                    app:layout_constraintStart_toStartOf="@id/txt_max"
                    app:layout_constraintTop_toBottomOf="@id/txt_max" />


                <TextView
                    android:id="@+id/txt_convert_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_40mdp"
                    android:layout_marginTop="@dimen/_11mdp"
                    android:fontFamily="@font/violet_sans"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_15msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edt_amount"
                    tools:text="~123" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_swap"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35mdp"
                    android:layout_marginEnd="@dimen/_10mdp"
                    android:background="@drawable/bg_green_switch"
                    android:maxWidth="@dimen/_100mdp"
                    android:minWidth="@dimen/_54mdp"
                    app:layout_constraintBottom_toBottomOf="@id/edt_amount"
                    app:layout_constraintEnd_toStartOf="@id/txt_currency_type"
                    app:layout_constraintTop_toTopOf="@id/edt_amount">

                    <TextView
                        android:id="@+id/txt_coin_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_8mdp"
                        android:layout_marginTop="@dimen/_1mdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/violet_sans"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:maxLength="8"
                        android:maxLines="1"
                        android:text="@{model.t_symbol}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15msp"
                        android:textStyle="bold"
                        app:layout_constrainedHeight="true"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/img_swap"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="MATICX" />

                    <ImageView
                        android:id="@+id/img_swap"
                        android:layout_width="@dimen/_14mdp"
                        android:layout_height="@dimen/_14mdp"
                        android:gravity="center_vertical"
                        android:src="@drawable/ic_arrow_swap_amount"
                        app:layout_constrainedHeight="true"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintStart_toEndOf="@id/txt_coin_type"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/txt_currency_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_8mdp"
                    android:layout_marginEnd="@dimen/_10mdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/violet_sans"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15msp"
                    app:layout_constrainedHeight="true"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="@id/layout_swap"
                    app:layout_constraintEnd_toEndOf="@id/edt_amount"
                    app:layout_constraintTop_toTopOf="@id/layout_swap"
                    tools:text="USD" />


                <TextView
                    android:id="@+id/txt_add_address_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15mdp"
                    android:layout_marginEnd="@dimen/_12mdp"
                    android:fontFamily="@font/inter"
                    android:gravity="center_horizontal"
                    android:text="@string/add_this_address_to_your_address_book"
                    android:textColor="@color/header_blue"
                    android:textSize="@dimen/_15msp"
                    android:visibility="gone"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="@id/edt_contract_address"
                    app:layout_constraintStart_toStartOf="@id/txt_convert_balance"
                    app:layout_constraintTop_toBottomOf="@id/txt_convert_balance" />


                <Button
                    android:id="@+id/btn_continue"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50mdp"
                    android:layout_marginHorizontal="@dimen/_20mdp"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:layout_marginBottom="@dimen/_10mdp"
                    android:background="@drawable/button_bg_border_blue"
                    android:focusable="true"
                    android:fontFamily="@font/violet_sans"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textColor="@color/bg_white"
                    android:textSize="@dimen/_18msp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_convert_balance"
                    app:layout_constraintVertical_bias="0.9"

                    />

                <!-- res/layout/activity_main.xml -->
