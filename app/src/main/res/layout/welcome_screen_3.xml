<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white">

        <!--
            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_228mdp"
                android:layout_marginTop="@dimen/_140mdp"
                android:src="@drawable/img_welcome_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        -->
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_50mdp"
            android:layout_height="@dimen/_50mdp"
            android:layout_marginStart="@dimen/_10mdp"
            android:layout_marginTop="@dimen/_10mdp"
            android:focusable="true"
            android:foreground="@drawable/ripple_effect"
            android:padding="@dimen/_8mdp"
            android:src="@drawable/ic_back_new"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_skip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20mdp"
            android:fontFamily="@font/inter"
            android:text="@string/skip"
            android:textColor="@color/sub_title_gray"
            android:textSize="@dimen/_15mdp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/img_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_back" />

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300mdp"
            android:layout_marginTop="@dimen/_20mdp"
            android:src="@drawable/img_one_wallet2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_back" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20mdp"
            android:layout_marginTop="@dimen/_30mdp"
            android:fontFamily="@font/violet_sans"
            android:gravity="start"
            android:lineSpacingExtra="@dimen/_6mdp"
            android:text="@string/one_wallet_amp_unlimited_possibilities"
            android:textColor="@color/black"
            android:textSize="@dimen/_32msp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_view"

            />

        <TextView
            android:id="@+id/txt_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_27mdp"
            android:layout_marginTop="@dimen/_23mdp"
            android:fontFamily="@font/inter"
            android:gravity="start"
            android:lineSpacingExtra="@dimen/_3mdp"
            android:text="@string/explore_a_world_of_unlimited_possibilities_with_a_single_wallet_empowering_you_to_do_more_with_your_digital_assets"
            android:textColor="@color/sub_title_gray"
            android:textSize="@dimen/_16msp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title"

            />


        <Button
            android:id="@+id/btn_next_2"
            style="@style/wallet_button_gradient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_30mdp"
            android:layout_marginTop="@dimen/_50mdp"
            android:layout_marginBottom="@dimen/_55mdp"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/get_start"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_instruction"
            app:layout_constraintVertical_bias="1"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>