<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="personalDetailViewModel"
            type="com.app.plutope.ui.fragment.card.personal_details.personal_info.PersonalDetailViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".ui.fragment.card.personal_details.personal_info.PersonalDetail">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_30mdp"
            android:layout_height="@dimen/_30mdp"
            android:layout_marginStart="@dimen/_17mdp"
            android:layout_marginTop="@dimen/_20mdp"
            android:padding="@dimen/_8mdp"
            android:src="@drawable/ic_back_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <include
            android:id="@+id/linear_progress"
            layout="@layout/progress_card_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10mdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_back" />

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15mdp"
            android:fillViewport="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear_progress">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20mdp"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear_progress">

                <TextView
                    android:id="@+id/txt_country_of_resident"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_17mdp"
                    android:layout_marginTop="@dimen/_19mdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:lineSpacingExtra="@dimen/_10msp"
                    android:text="@string/country_of_residence"
                    android:textColor="@color/purple_7576D"
                    android:textSize="@dimen/_10msp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_country"
                    style="@style/edittext_fill_bg_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16mdp"
                    android:layout_marginTop="@dimen/_11mdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_country_of_resident">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_country_flag"
                        android:layout_width="@dimen/_22mdp"
                        android:layout_height="@dimen/_22mdp"
                        android:layout_marginStart="@dimen/_12mdp"
                        android:src="@drawable/img_logo_with_circle_bg"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_country_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10mdp"
                        android:autofillHints=""
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/_12mdp"
                        android:paddingEnd="@dimen/_20mdp"
                        android:text="India"
                        android:textColor="@color/white"
                        android:textColorHint="@color/purple_7576D"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/_10msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/img_down_arrow"
                        app:layout_constraintStart_toEndOf="@id/img_country_flag"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="India" />

                    <ImageView
                        android:id="@+id/img_down_arrow"
                        android:layout_width="@dimen/_9mdp"
                        android:layout_height="@dimen/_9mdp"
                        android:layout_marginStart="@dimen/_12mdp"
                        android:layout_marginEnd="@dimen/_19mdp"
                        android:src="@drawable/ic_down_arrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/txt_personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_39mdp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="@string/personal_information"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_17msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="@id/layout_country"
                    app:layout_constraintStart_toStartOf="@id/layout_country"
                    app:layout_constraintTop_toBottomOf="@id/layout_country" />

                <TextView
                    android:id="@+id/txt_title_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20mdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:lineSpacingExtra="@dimen/_10msp"
                    android:text="@string/first_name_legal"
                    android:textColor="@color/purple_7576D"
                    android:textSize="@dimen/_10msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="@id/txt_personal_info"
                    app:layout_constraintStart_toStartOf="@id/txt_personal_info"
                    app:layout_constraintTop_toBottomOf="@id/txt_personal_info" />


                <EditText
                    android:id="@+id/edt_first_name"
                    style="@style/edittext_fill_bg_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_11mdp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_20mdp"
                    android:paddingEnd="@dimen/_35mdp"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/_10msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="@id/txt_title_first_name"
                    app:layout_constraintStart_toStartOf="@id/txt_title_first_name"
                    app:layout_constraintTop_toBottomOf="@id/txt_title_first_name" />


                <TextView
                    android:id="@+id/txt_title_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20mdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:lineSpacingExtra="@dimen/_10msp"
                    android:text="@string/last_name_legal"
                    android:textColor="@color/purple_7576D"
                    android:textSize="@dimen/_10msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="@id/edt_first_name"
                    app:layout_constraintStart_toStartOf="@id/edt_first_name"
                    app:layout_constraintTop_toBottomOf="@id/edt_first_name" />


                <EditText
                    android:id="@+id/edt_last_name"
                    style="@style/edittext_fill_bg_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_11mdp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_20mdp"
                    android:paddingEnd="@dimen/_35mdp"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/_10msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="@id/txt_title_last_name"
                    app:layout_constraintStart_toStartOf="@id/txt_title_last_name"
                    app:layout_constraintTop_toBottomOf="@id/txt_title_last_name" />

                <TextView
                    android:id="@+id/txt_title_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20mdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:lineSpacingExtra="@dimen/_10msp"
                    android:text="@string/date_of_birth"
                    android:textColor="@color/purple_7576D"
                    android:textSize="@dimen/_10msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="@id/edt_last_name"
                    app:layout_constraintStart_toStartOf="@id/edt_last_name"
                    app:layout_constraintTop_toBottomOf="@id/edt_last_name" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_dob"
                    style="@style/edittext_fill_bg_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16mdp"
                    android:layout_marginTop="@dimen/_11mdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_title_dob">


                    <TextView
                        android:id="@+id/txt_date_of_birth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10mdp"
                        android:autofillHints=""
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/_20mdp"
                        android:paddingEnd="@dimen/_20mdp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/purple_7576D"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/_10msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/img_calender"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="19-01-1998" />

                    <ImageView
                        android:id="@+id/img_calender"
                        android:layout_width="@dimen/_30mdp"
                        android:layout_height="@dimen/_30mdp"
                        android:layout_marginEnd="@dimen/_19mdp"
                        android:padding="@dimen/_6mdp"
                        android:src="@drawable/ic_calender"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <Button
                    android:id="@+id/btn_continue"
                    style="@style/wallet_button_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_30mdp"
                    android:layout_marginTop="@dimen/_58mdp"
                    android:layout_marginBottom="@dimen/_70mdp"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_dob"
                    app:layout_constraintVertical_bias="1"
                    app:layout_constraintVertical_chainStyle="packed"

                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>