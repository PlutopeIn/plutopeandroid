<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="transferViewModel"
            type="com.app.plutope.ui.fragment.transfer.TransferViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_white"
            android:backgroundTint="@color/bg_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".ui.fragment.transfer.Transfer">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/img_back"
                        android:layout_width="@dimen/_50mdp"
                        android:layout_height="@dimen/_50mdp"
                        android:layout_marginStart="@dimen/_10mdp"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:focusable="true"
                        android:foreground="@drawable/ripple_effect"
                        android:padding="@dimen/_8mdp"
                        android:src="@drawable/ic_back_new"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        />

                    <TextView
                        android:id="@+id/txt_toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/violet_sans"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20msp"
                        app:layout_constraintBottom_toBottomOf="@id/img_back"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/img_back"
                        tools:text="Transfer" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_setting"
                        android:layout_width="@dimen/_30mdp"
                        android:layout_height="@dimen/_30mdp"
                        android:layout_marginEnd="@dimen/_20mdp"
                        android:padding="@dimen/_5mdp"
                        android:src="@drawable/ic_setting"
                        android:visibility="gone"
                        app:layout_constrainedHeight="true"
                        app:layout_constraintBottom_toBottomOf="@id/txt_toolbar_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/txt_toolbar_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guid1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent=".2" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_coin"
                    android:layout_width="@dimen/_68mdp"
                    android:layout_height="@dimen/_68mdp"
                    android:layout_marginStart="@dimen/_20mdp"
                    android:layout_marginTop="@dimen/_60mdp"
                    android:src="@drawable/img_logo_dashboard_circle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_toolbar"

                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15mdp"
                    android:layout_marginTop="@dimen/_5mdp"
                    android:layout_marginEnd="@dimen/_10mdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/violet_sans"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_25msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@id/img_coin"
                    app:layout_constraintTop_toTopOf="@id/img_coin"
                    tools:text="-0.0012 BTC" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guid_swap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent=".15" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guid_swap1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent=".12" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_swap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20mdp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/layout_toolbar"
                    app:layout_constraintStart_toStartOf="@id/layout_toolbar"
                    app:layout_constraintTop_toBottomOf="@id/guid_swap1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_from_swap"
                        android:layout_width="@dimen/_35mdp"
                        android:layout_height="@dimen/_35mdp"
                        android:src="@drawable/img_logo_circle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_from_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10mdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/violet_sans"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/img_from_swap"
                        app:layout_constraintTop_toTopOf="@id/img_from_swap"
                        tools:text="-0.00123454365BTC" />

                    <TextView
                        android:id="@+id/txt_from_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3mdp"
                        android:drawablePadding="@dimen/_6mdp"
                        android:fontFamily="@font/violet_sans"
                        android:textColor="@color/value_gray"
                        android:textSize="@dimen/_11msp"
                        app:layout_constraintStart_toStartOf="@id/txt_from_balance"
                        app:layout_constraintTop_toBottomOf="@id/txt_from_balance"
                        tools:text="BEP20" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_down_arrow"
                        android:layout_width="@dimen/_22mdp"
                        android:layout_height="@dimen/_25mdp"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:src="@drawable/ic_down_arrow_big"
                        app:layout_constraintEnd_toEndOf="@id/img_from_swap"
                        app:layout_constraintStart_toStartOf="@id/img_from_swap"
                        app:layout_constraintTop_toBottomOf="@id/img_from_swap" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_to_swap"
                        android:layout_width="@dimen/_35mdp"
                        android:layout_height="@dimen/_35mdp"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:src="@drawable/img_logo_circle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/img_down_arrow" />

                    <TextView
                        android:id="@+id/txt_to_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10mdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/violet_sans"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/img_to_swap"
                        app:layout_constraintTop_toTopOf="@id/img_to_swap"
                        tools:text="-0.00123454365BTC" />

                    <TextView
                        android:id="@+id/txt_to_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4mdp"
                        android:drawablePadding="@dimen/_6mdp"
                        android:fontFamily="@font/quicksand_regular"
                        android:textColor="@color/value_gray"
                        android:textSize="@dimen/_11msp"
                        app:layout_constraintStart_toStartOf="@id/txt_to_balance"
                        app:layout_constraintTop_toBottomOf="@id/txt_to_balance"
                        tools:text="BEP20" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_swap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:constraint_referenced_ids="txt_balance,txt_equal,txt_price" />

                <TextView
                    android:id="@+id/txt_equal"
                    android:layout_width="8dp"
                    android:layout_height="11dp"
                    android:background="@drawable/ic_swap_equal"
                    android:backgroundTint="@color/value_gray"
                    android:fontFamily="@font/violet_sans"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_26msp"
                    app:layout_constraintBottom_toBottomOf="@id/txt_price"
                    app:layout_constraintStart_toStartOf="@id/txt_balance"
                    app:layout_constraintTop_toTopOf="@id/txt_price" />

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5mdp"
                    android:layout_marginTop="@dimen/_7mdp"
                    android:drawablePadding="@dimen/_6mdp"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/sub_title_gray"
                    android:textSize="@dimen/_16msp"
                    app:layout_constraintStart_toEndOf="@id/txt_equal"
                    app:layout_constraintTop_toBottomOf="@id/txt_balance"
                    tools:text="$2.81" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_basic_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20mdp"
                    android:layout_marginTop="@dimen/_45mdp"
                    android:background="@drawable/bg_border_card_radius_23"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_price">


                    <TextView
                        android:id="@+id/txt_asset"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15mdp"
                        android:layout_marginTop="@dimen/_29mdp"
                        android:fontFamily="@font/violet_sans"
                        android:includeFontPadding="true"
                        android:text="@string/asset"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toStartOf="@id/txt_asset_value"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_asset_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12mdp"
                        android:layout_marginEnd="@dimen/_18mdp"
                        android:ellipsize="middle"
                        android:fontFamily="@font/violet_sans"
                        android:includeFontPadding="true"
                        android:maxLines="1"
                        android:textColor="@color/value_gray"
                        android:textSize="@dimen/_15msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="@id/txt_asset"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guidline1"
                        app:layout_constraintTop_toTopOf="@id/txt_asset"
                        tools:text="Ethereum (ETH) dsjoifg vnojkfn fsdnhoifhnfoisdjfio" />


                    <TextView
                        android:id="@+id/txt_from"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8mdp"
                        android:fontFamily="@font/violet_sans"
                        android:includeFontPadding="true"
                        android:text="@string/from"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toStartOf="@id/guidline1"
                        app:layout_constraintStart_toStartOf="@id/txt_asset"
                        app:layout_constraintTop_toBottomOf="@id/txt_asset" />

                    <TextView
                        android:id="@+id/txt_from_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_18mdp"
                        android:layout_marginEnd="@dimen/_18mdp"
                        android:ellipsize="middle"
                        android:fontFamily="@font/violet_sans"
                        android:includeFontPadding="true"
                        android:maxLines="1"
                        android:textColor="@color/value_gray"
                        android:textSize="@dimen/_15msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="@id/txt_from"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@id/guidline1"
                        app:layout_constraintTop_toTopOf="@id/txt_from"
                        tools:text="adasdadasdsd" />


                    <TextView
                        android:id="@+id/txt_to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8mdp"
                        android:fontFamily="@font/violet_sans"
                        android:includeFontPadding="true"
                        android:text="@string/to"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toStartOf="@id/txt_to_value"
                        app:layout_constraintStart_toStartOf="@id/txt_asset"
                        app:layout_constraintTop_toBottomOf="@id/txt_from" />

                    <TextView
                        android:id="@+id/txt_to_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5mdp"
                        android:layout_marginEnd="@dimen/_18mdp"
                        android:ellipsize="middle"
                        android:fontFamily="@font/violet_sans"
                        android:includeFontPadding="true"
                        android:maxLines="1"
                        android:textColor="@color/value_gray"
                        android:textSize="@dimen/_15msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guidline1"
                        app:layout_constraintTop_toTopOf="@id/txt_to"
                        tools:text="0x78bjvbjjsdfbybgbhsfbbbhbfhbhfbhbfhbfhf1adkmgmgmgmkmgk5hhnkjn54tttre" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidline1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.3994709"
                        app:layout_constraintStart_toStartOf="@id/txt_to" />


                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginTop="@dimen/_25mdp"
                        android:background="@color/button_disable"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toEndOf="@+id/txt_to_value"
                        app:layout_constraintStart_toStartOf="@+id/txt_to"
                        app:layout_constraintTop_toBottomOf="@+id/txt_to" />

                    <TextView
                        android:id="@+id/txt_network_fee_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_18mdp"
                        android:layout_marginTop="@dimen/_27mdp"
                        android:fontFamily="@font/violet_sans"
                        android:includeFontPadding="true"
                        android:text="@string/network_fee"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toStartOf="@id/txt_network_fee_value"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider" />

                    <TextView
                        android:id="@+id/txt_network_fee_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_18mdp"
                        android:layout_marginEnd="@dimen/_3mdp"
                        android:focusable="true"
                        android:fontFamily="@font/violet_sans"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="end"
                        android:includeFontPadding="true"
                        android:paddingVertical="@dimen/_2mdp"
                        android:textColor="@color/header_blue"
                        android:textSize="@dimen/_15msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="@id/txt_network_fee_title"
                        app:layout_constraintEnd_toStartOf="@id/img_gas_fee"
                        app:layout_constraintStart_toEndOf="@id/txt_network_fee_title"
                        app:layout_constraintTop_toTopOf="@id/txt_network_fee_title"
                        app:layout_goneMarginEnd="@dimen/_18mdp"
                        tools:text="0.0001534589436785683476578346587 BNB($0.02)" />

                    <ImageView
                        android:id="@+id/img_gas_fee"
                        android:layout_width="@dimen/_25mdp"
                        android:layout_height="@dimen/_25mdp"
                        android:layout_marginEnd="@dimen/_18mdp"
                        android:background="@drawable/ic_circle_green"
                        android:padding="@dimen/_5mdp"
                        android:src="@drawable/ic_gas_station"
                        android:visibility="gone"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="@id/txt_network_fee_value"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/txt_network_fee_value" />

                    <ProgressBar
                        android:id="@+id/progress_network_fee"
                        android:layout_width="@dimen/_20mdp"
                        android:layout_height="@dimen/_20mdp"
                        android:layout_marginEnd="@dimen/_20mdp"
                        android:indeterminateTint="@color/header_blue"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="@id/txt_network_fee_value"
                        app:layout_constraintTop_toTopOf="@id/txt_network_fee_value" />


                    <TextView
                        android:id="@+id/txt_max_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_18mdp"
                        android:layout_marginTop="@dimen/_8mdp"
                        android:fontFamily="@font/violet_sans"
                        android:includeFontPadding="true"
                        android:text="@string/max_total"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toStartOf="@id/txt_max_total_value"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_network_fee_value" />

                    <TextView
                        android:id="@+id/txt_max_total_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_18mdp"
                        android:layout_marginEnd="@dimen/_18mdp"
                        android:layout_marginBottom="@dimen/_30mdp"
                        android:fontFamily="@font/violet_sans"
                        android:includeFontPadding="true"
                        android:textColor="@color/value_gray"
                        android:textSize="@dimen/_15msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/txt_max_total"
                        tools:text="20" />

                    <ProgressBar
                        android:id="@+id/progress_max_total"
                        android:layout_width="@dimen/_20mdp"
                        android:layout_height="@dimen/_20mdp"
                        android:layout_marginEnd="@dimen/_20mdp"
                        android:indeterminateTint="@color/header_blue"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="@id/txt_max_total_value"
                        app:layout_constraintTop_toTopOf="@id/txt_max_total_value" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_confirm"
                    style="@style/wallet_button_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_30mdp"
                    android:layout_marginTop="@dimen/_50mdp"
                    android:layout_marginBottom="@dimen/_80mdp"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="@string/confirm"
                    android:textAllCaps="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="1" />

                <View
                    android:id="@+id/btn_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50mdp"
                    android:layout_marginHorizontal="@dimen/_30mdp"
                    android:layout_marginTop="@dimen/_50mdp"
                    android:layout_marginBottom="@dimen/_80mdp"
                    android:focusable="true"
                    android:minHeight="@dimen/_50mdp"
                    android:text="@string/confirm"
                    android:visibility="visible"
                    app:layout_constrainedHeight="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_basic_detail"
                    app:layout_constraintVertical_bias="1" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_topup"
                    style="@style/wallet_button_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_30mdp"
                    android:layout_marginTop="@dimen/_67mdp"
                    android:text="@string/confirm"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/guid"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="1" />


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.95" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>