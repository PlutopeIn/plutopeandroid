<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="basicViewModel"
            type="com.app.plutope.ui.fragment.card.membership.basic.BasicViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".ui.fragment.card.membership.basic.Basic">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_30mdp"
            android:layout_height="@dimen/_30mdp"
            android:layout_marginStart="@dimen/_17mdp"
            android:layout_marginTop="@dimen/_20mdp"
            android:padding="@dimen/_8mdp"
            android:src="@drawable/ic_back_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <include
            android:id="@+id/linear_progress"
            layout="@layout/progress_card_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10mdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_back" />


        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_20mdp"
            android:fillViewport="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear_progress">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear_progress">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_switch_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16mdp"
                    android:layout_marginTop="@dimen/_30mdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/txt_basic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selecter_basic"
                        android:fontFamily="@font/quicksand_semibold"
                        android:paddingHorizontal="@dimen/_23mdp"
                        android:paddingVertical="@dimen/_10mdp"
                        android:text="@string/basic"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10msp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_professional"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7mdp"
                        android:background="@drawable/selecter_professional"
                        android:fontFamily="@font/quicksand_semibold"
                        android:paddingHorizontal="@dimen/_15mdp"
                        android:paddingVertical="@dimen/_10mdp"
                        android:text="@string/professional"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10msp"
                        app:layout_constraintStart_toEndOf="@id/txt_basic"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_business"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7mdp"
                        android:background="@drawable/selecter_professional"
                        android:fontFamily="@font/quicksand_semibold"
                        android:paddingHorizontal="@dimen/_17mdp"
                        android:paddingVertical="@dimen/_10mdp"
                        android:text="@string/business"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10msp"
                        app:layout_constraintStart_toEndOf="@id/txt_professional"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_platinum_elite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7mdp"
                        android:background="@drawable/selecter_professional"
                        android:fontFamily="@font/quicksand_semibold"
                        android:paddingHorizontal="@dimen/_13mdp"
                        android:paddingVertical="@dimen/_10mdp"
                        android:text="@string/platinum_elite"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10msp"
                        app:layout_constraintStart_toEndOf="@id/txt_business"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_36mdp"
                    android:layout_marginTop="@dimen/_32mdp"
                    android:background="@drawable/img_card_basic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_switch_button"
                    app:layout_constraintVertical_bias="0">


                    <TextView
                        android:id="@+id/txt_title_membership"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_24mdp"
                        android:layout_marginTop="@dimen/_16mdp"
                        android:fontFamily="@font/quicksand_semibold"
                        android:text="@string/basic"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_17msp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_membership_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10mdp"
                        android:layout_marginEnd="@dimen/_23mdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/quicksand_bold"
                        android:maxLines="1"
                        android:text="$9"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_30msp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="@id/txt_title_membership"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintStart_toEndOf="@id/txt_title_membership"
                        app:layout_constraintTop_toTopOf="@id/txt_title_membership" />


                    <TextView
                        android:id="@+id/txt_plastic_global_payment_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_24mdp"
                        android:layout_marginTop="@dimen/_45mdp"
                        android:fontFamily="@font/quicksand_semibold"
                        android:text="@string/plastic_global_payment_card"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13msp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_title_membership" />

                    <TextView
                        android:id="@+id/txt_daily_card_top_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15mdp"
                        android:fontFamily="@font/quicksand_semibold"
                        android:text="@string/daily_card_top_up"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13msp"
                        app:layout_constraintStart_toStartOf="@id/txt_plastic_global_payment_card"
                        app:layout_constraintTop_toBottomOf="@id/txt_plastic_global_payment_card" />

                    <TextView
                        android:id="@+id/txt_daily_card_top_up_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2mdp"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="Up to $15,000 per day"
                        android:textColor="@color/purple_7576D"
                        android:textSize="@dimen/_10msp"
                        app:layout_constraintStart_toStartOf="@id/txt_daily_card_top_up"
                        app:layout_constraintTop_toBottomOf="@id/txt_daily_card_top_up" />


                    <TextView
                        android:id="@+id/txt_atm_withdrawals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20mdp"
                        android:fontFamily="@font/quicksand_semibold"
                        android:text="@string/atm_withdrawals"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13msp"
                        app:layout_constraintStart_toStartOf="@id/txt_daily_card_top_up_payment"
                        app:layout_constraintTop_toBottomOf="@id/txt_daily_card_top_up_payment" />

                    <TextView
                        android:id="@+id/txt_atm_withdrawals_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2mdp"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="Up to $15,000 per day"
                        android:textColor="@color/purple_7576D"
                        android:textSize="@dimen/_10msp"
                        app:layout_constraintStart_toStartOf="@id/txt_atm_withdrawals"
                        app:layout_constraintTop_toBottomOf="@id/txt_atm_withdrawals" />


                    <TextView
                        android:id="@+id/txt_crypto_liquidation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20mdp"
                        android:fontFamily="@font/quicksand_semibold"
                        android:text="@string/crypto_liquidation"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13msp"
                        app:layout_constraintStart_toStartOf="@id/txt_atm_withdrawals_payment"
                        app:layout_constraintTop_toBottomOf="@id/txt_atm_withdrawals_payment" />

                    <TextView
                        android:id="@+id/txt_crypto_liquidation_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2mdp"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="2.2"
                        android:textColor="@color/purple_7576D"
                        android:textSize="@dimen/_10msp"
                        app:layout_constraintStart_toStartOf="@id/txt_crypto_liquidation"
                        app:layout_constraintTop_toBottomOf="@id/txt_crypto_liquidation" />

                    <TextView
                        android:id="@+id/txt_card_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16mdp"
                        android:fontFamily="@font/quicksand_semibold"
                        android:text="USD Card"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13msp"
                        app:layout_constraintStart_toStartOf="@id/txt_crypto_liquidation_amount"
                        app:layout_constraintTop_toBottomOf="@id/txt_crypto_liquidation_amount" />


                    <TextView
                        android:id="@+id/txt_global_support"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_18mdp"
                        android:fontFamily="@font/quicksand_semibold"
                        android:text="@string/global_support"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13msp"
                        app:layout_constraintStart_toStartOf="@id/txt_card_type"
                        app:layout_constraintTop_toBottomOf="@id/txt_card_type" />

                    <TextView
                        android:id="@+id/txt_global_support_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2mdp"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="@string/_24_7_via_online_chat"
                        android:textColor="@color/purple_7576D"
                        android:textSize="@dimen/_10msp"
                        app:layout_constraintStart_toStartOf="@id/txt_global_support"
                        app:layout_constraintTop_toBottomOf="@id/txt_global_support" />


                    <Button
                        android:id="@+id/btn_get_card"
                        style="@style/wallet_button_gradient"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38mdp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_71mdp"
                        android:layout_marginTop="@dimen/_30mdp"
                        android:layout_marginBottom="@dimen/_36mdp"
                        android:text="@string/get_basic_card"
                        android:textAllCaps="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_global_support_value"

                        />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>