<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.app.plutope.model.CountryListModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_lock_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12mdp"
        android:layout_marginTop="@dimen/_5mdp"
        app:cardBackgroundColor="@color/bg_white"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_auto_lock">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_country_flag"
                bannerImage="@{model.image}"
                android:layout_width="@dimen/_30mdp"
                android:layout_height="@dimen/_30mdp"
                android:layout_marginStart="@dimen/_10mdp"
                android:src="@drawable/img_logo_circle_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_country_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_19mdp"
                android:layout_marginStart="@dimen/_16mdp"
                android:fontFamily="@font/inter"
                android:minWidth="@dimen/_80mdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_13msp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_country_flag"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="+244" />


            <TextView
                android:id="@+id/txt_lock_method_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_19mdp"
                android:layout_marginStart="@dimen/_16mdp"
                android:fontFamily="@font/inter"
                android:textColor="@color/black"
                android:textSize="@dimen/_13msp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_country_code"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Passcode/Biometric" />

            <ImageView
                android:id="@+id/img_tick"
                android:layout_width="@dimen/_20mdp"
                android:layout_height="@dimen/_20mdp"
                android:layout_marginEnd="@dimen/_17mdp"
                android:src="@drawable/ic_tick"
                android:visibility="@{model.isSelected ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="@dimen/_11mdp"
                android:background="@color/border_gray"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="@+id/img_tick"
                app:layout_constraintStart_toStartOf="@id/img_country_flag"
                app:layout_constraintTop_toBottomOf="@+id/img_country_flag" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>