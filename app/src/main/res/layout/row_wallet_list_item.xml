<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.app.plutope.model.Wallets" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16mdp"
        android:background="@drawable/bg_corner_radius_35">

        <ImageView
            android:id="@+id/img_bag"
            android:layout_width="@dimen/_40mdp"
            android:layout_height="@dimen/_40mdp"
            android:layout_marginStart="@dimen/_14mdp"
            android:src="@drawable/img_logo_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_wallet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13mdp"
            android:layout_marginTop="@dimen/_15mdp"
            android:fontFamily="@font/violet_sans"
            app:layout_constrainedWidth="true"

            android:maxLines="2"
            android:ellipsize="end"
            android:text="@{model.w_wallet_name}"
            android:textColor="@color/black"
            android:textSize="@dimen/_16msp"
            app:layout_constraintEnd_toStartOf="@id/img_menu"
            app:layout_constraintStart_toEndOf="@id/img_bag"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Main Wallet 1"

            />

        <TextView
            android:id="@+id/txt_transaction_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4mdp"
            android:layout_marginBottom="@dimen/_14mdp"
            android:fontFamily="@font/inter"

            android:text="@string/multi_coin_wallet"
            android:textColor="@color/sub_title_gray"
            android:textSize="@dimen/_14msp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/txt_wallet_name"
            app:layout_constraintTop_toBottomOf="@id/txt_wallet_name"
            tools:text="Multi-Coin Wallet" />

        <ImageView
            android:id="@+id/img_primary"
            android:layout_width="@dimen/_15mdp"
            android:layout_height="@dimen/_15mdp"
            android:src="@drawable/ic_check"
            android:layout_marginEnd="-7dp"
            app:layout_constraintEnd_toEndOf="@id/img_bag"
            app:layout_constraintTop_toTopOf="@id/img_bag" />

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_14mdp"
            android:paddingEnd="@dimen/_14mdp"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:paddingStart="@dimen/_23mdp"
            android:src="@drawable/ic_menu_dots"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>