<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.app.plutope.model.Wallets" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5mdp"
        android:background="@drawable/bg_corner_radius_10">

        <ImageView
            android:id="@+id/img_bag"
            android:layout_width="@dimen/_40mdp"
            android:layout_height="@dimen/_40mdp"
            android:layout_marginStart="@dimen/_14mdp"
            android:src="@drawable/img_pluto_pe_logo_with_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14mdp"
            android:layout_marginTop="@dimen/_20mdp"
            android:fontFamily="@font/quicksand_semibold"
            android:text="@{model.w_wallet_name}"
            android:textColor="@color/white"
            android:textSize="@dimen/_13msp"
            app:layout_constraintStart_toEndOf="@id/img_bag"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Main Wallet 1"

            />

        <TextView
            android:id="@+id/txt_transaction_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4mdp"
            android:layout_marginBottom="@dimen/_20mdp"
            android:fontFamily="@font/quicksand_regular"
            android:text="@string/multi_coin_wallet"
            android:textColor="@color/purple_7576D"
            android:textSize="@dimen/_10msp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/txt_wallet_name"
            app:layout_constraintTop_toBottomOf="@id/txt_wallet_name"
            tools:text="Multi-Coin Wallet" />

        <ImageView
            android:id="@+id/img_primary"
            android:layout_width="@dimen/_8mdp"
            android:layout_height="@dimen/_8mdp"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/img_bag"
            app:layout_constraintTop_toTopOf="@id/img_bag" />

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="@dimen/_20mdp"
            android:layout_height="@dimen/_16mdp"
            android:layout_marginStart="@dimen/_14mdp"
            android:layout_marginEnd="@dimen/_19mdp"
            android:src="@drawable/ic_menu_dots_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>