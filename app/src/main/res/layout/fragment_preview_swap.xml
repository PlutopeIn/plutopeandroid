                app:constraint_referenced_ids="divider,txt_provider_fee,txt_provider_value,txt_network_fee_title,txt_swapper_fee_value,txt_network_fee_value,txt_swapper_fee_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btn_swap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_30mdp"
            android:layout_marginTop="@dimen/_67mdp"
            android:background="@drawable/button_bg_border_blue"
            android:focusable="true"
