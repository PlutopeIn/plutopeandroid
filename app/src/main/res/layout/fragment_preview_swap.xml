<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="previewSwapViewModel"
            type="com.app.plutope.ui.fragment.transactions.swap.previewSwap.PreviewSwapViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        tools:context=".ui.fragment.transfer.Transfer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_50mdp"
                android:layout_height="@dimen/_50mdp"
                android:layout_marginStart="@dimen/_10mdp"
                android:layout_marginTop="@dimen/_10mdp"
                android:focusable="true"
                android:foreground="@drawable/ripple_effect"
                android:padding="@dimen/_8mdp"
                android:src="@drawable/ic_back_new"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:id="@+id/txt_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/violet_sans"
                android:text="@string/swap"

                android:textColor="@color/black"
                android:textSize="@dimen/_20msp"
                app:layout_constraintBottom_toBottomOf="@id/img_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_back" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".2" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".40" />

        <ImageView
            android:id="@+id/img_notification"
            android:layout_width="@dimen/_40mdp"
            android:layout_height="@dimen/_40mdp"
            android:layout_marginEnd="@dimen/_20mdp"
            android:src="@drawable/ic_share_with_bg"
            android:visibility="gone"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="@id/layout_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/layout_toolbar" />


        <TextView
            android:id="@+id/txt_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10mdp"
            android:layout_marginTop="@dimen/_20mdp"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/_26msp"
            app:layout_constraintBottom_toTopOf="@id/guid1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="-0.00123454365BTC" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_swap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_18mdp"
            android:layout_marginTop="@dimen/_50mdp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_toolbar">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lyt_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_border_card_radius_23"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_from_swap"
                    android:layout_width="@dimen/_34mdp"
                    android:layout_height="@dimen/_34mdp"
                    android:layout_marginStart="@dimen/_17mdp"
                    android:src="@drawable/img_pluto_pe_logo_with_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_coin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7mdp"
                    android:fontFamily="@font/violet_sans"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14msp"

                    app:layout_constrainedWidth="true"
                    app:layout_constraintStart_toEndOf="@+id/img_from_swap"
                    app:layout_constraintTop_toTopOf="@+id/img_from_swap"
                    tools:text="Bitcoin" />

                <TextView
                    android:id="@+id/txt_chain_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7mdp"
                    android:layout_marginTop="@dimen/_5mdp"
                    android:layout_marginEnd="@dimen/_10mdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/violet_sans"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/sub_title_gray"
                    android:textSize="@dimen/_11msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="@id/guidline_middle_price"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@id/img_from_swap"
                    app:layout_constraintTop_toBottomOf="@+id/txt_coin_name"
                    tools:text="Bitcoin jdscnkmsdnclvksdmnc gfdgg" />

                <TextView
                    android:id="@+id/txt_network_name_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4mdp"
                    android:background="@drawable/bg_gray_border_radius_2"
                    android:fontFamily="@font/violet_sans"

                    android:padding="@dimen/_2mdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_7msp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_coin_name"
                    app:layout_constraintStart_toEndOf="@+id/txt_coin_name"
                    app:layout_constraintTop_toTopOf="@+id/txt_coin_name"
                    tools:text="BTC"

                    />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidline_middle_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.50" />

                <TextView
                    android:id="@+id/txt_from_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18mdp"
                    android:layout_marginEnd="@dimen/_16mdp"

                    android:ellipsize="end"
                    android:fontFamily="@font/violet_sans"
                    android:maxLines="2"
                    android:textColor="@color/sub_title_gray"
                    android:textSize="@dimen/_12msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toEndOf="@id/guidline_middle_price"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="-0.00123454365456455436546 BSC-USD" />

                <TextView
                    android:id="@+id/txt_from_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_7mdp"
                    android:layout_marginBottom="@dimen/_16mdp"
                    android:background="@drawable/bg_transparent_green"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter"
                    android:maxWidth="@dimen/_180mdp"

                    android:maxLines="2"
                    android:paddingHorizontal="@dimen/_7mdp"
                    android:paddingVertical="@dimen/_2mdp"
                    android:textColor="@color/green_00A323"
                    android:textSize="@dimen/_11msp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/txt_from_balance"
                    app:layout_constraintTop_toBottomOf="@id/txt_from_balance"
                    app:layout_constraintVertical_bias="0"
                    tools:text="" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lyt_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_22mdp"
                android:background="@drawable/bg_border_card_radius_23"
                app:layout_constraintEnd_toEndOf="@+id/lyt_top"
                app:layout_constraintStart_toStartOf="@+id/lyt_top"
                app:layout_constraintTop_toBottomOf="@+id/lyt_top">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidline_middle_price_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.50" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_to_swap"
                    android:layout_width="@dimen/_34mdp"
                    android:layout_height="@dimen/_34mdp"
                    android:layout_marginStart="@dimen/_17mdp"
                    android:src="@drawable/img_pluto_pe_logo_with_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_to_coin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7mdp"
                    android:fontFamily="@font/violet_sans"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14msp"

                    app:layout_constrainedWidth="true"
                    app:layout_constraintStart_toEndOf="@+id/img_to_swap"
                    app:layout_constraintTop_toTopOf="@+id/img_to_swap"
                    tools:text="Bitcoin" />

                <TextView
                    android:id="@+id/txt_to_chain_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7mdp"
                    android:layout_marginTop="@dimen/_5mdp"
                    android:layout_marginEnd="@dimen/_10mdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/violet_sans"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/sub_title_gray"
                    android:textSize="@dimen/_11msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="@id/guidline_middle_price_2"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@id/img_to_swap"
                    app:layout_constraintTop_toBottomOf="@+id/txt_to_coin_name"
                    tools:text="Bitcoin" />

                <TextView
                    android:id="@+id/txt_to_network_name_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4mdp"
                    android:background="@drawable/bg_gray_border_radius_2"
                    android:fontFamily="@font/violet_sans"

                    android:padding="@dimen/_2mdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_7msp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_to_coin_name"
                    app:layout_constraintStart_toEndOf="@+id/txt_to_coin_name"
                    app:layout_constraintTop_toTopOf="@+id/txt_to_coin_name"
                    tools:text="BTC"

                    />


                <TextView
                    android:id="@+id/txt_to_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18mdp"
                    android:layout_marginEnd="@dimen/_16mdp"

                    android:ellipsize="end"
                    android:fontFamily="@font/violet_sans"
                    android:maxLines="2"
                    android:textColor="@color/sub_title_gray"
                    android:textSize="@dimen/_12msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toEndOf="@id/guidline_middle_price_2"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="-0.00123454365789789789543789 BTC" />

                <TextView
                    android:id="@+id/txt_to_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7mdp"
                    android:layout_marginBottom="@dimen/_16mdp"
                    android:background="@drawable/bg_transparent_green"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter"
                    android:maxWidth="@dimen/_180mdp"

                    android:maxLines="2"
                    android:paddingHorizontal="@dimen/_7mdp"
                    android:paddingVertical="@dimen/_2mdp"
                    android:textColor="@color/green_00A323"
                    android:textSize="@dimen/_11msp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/txt_to_balance"
                    app:layout_constraintTop_toBottomOf="@id/txt_to_balance"
                    app:layout_constraintVertical_bias="0"
                    tools:text="" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_down_arrow"
                android:layout_width="@dimen/_52mdp"
                android:layout_height="@dimen/_52mdp"
                android:src="@drawable/arrow_down_with_bg"
                app:layout_constraintBottom_toTopOf="@+id/lyt_bottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lyt_top" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_swap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="txt_balance,txt_equal,txt_price" />

        <TextView
            android:id="@+id/txt_equal"
            android:layout_width="@dimen/_10mdp"
            android:layout_height="@dimen/_10mdp"
            android:layout_marginEnd="@dimen/_5mdp"
            android:background="@drawable/ic_swap_equal"
            android:backgroundTint="@color/purple_7576D"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/_26msp"
            app:layout_constraintBottom_toBottomOf="@id/txt_price"
            app:layout_constraintEnd_toStartOf="@id/txt_price"
            app:layout_constraintTop_toTopOf="@id/txt_price" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7mdp"
            android:drawablePadding="@dimen/_6mdp"
            android:textSize="@dimen/_16msp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guid1"
            tools:text="$2.81" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_basic_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16mdp"
            android:layout_marginTop="@dimen/_44mdp"
            android:background="@drawable/bg_border_card_radius_23"
            android:paddingVertical="@dimen/_28mdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraint_swap">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="151dp"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/txt_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12mdp"
                android:fontFamily="@font/violet_sans"
                android:text="@string/from"
                android:textColor="@color/black"

                android:textSize="@dimen/_13msp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@id/guidline1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_from_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginEnd="@dimen/_10mdp"
                android:ellipsize="middle"
                android:fontFamily="@font/violet_sans"
                android:gravity="end"

                android:maxLines="1"
                android:textColor="@color/value_gray"
                android:textSize="@dimen/_13msp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@id/txt_from"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guidline1"
                app:layout_constraintTop_toTopOf="@id/txt_from"
                tools:text="May 5, 06:10 PM" />


            <TextView
                android:id="@+id/txt_quote_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginTop="@dimen/_10mdp"
                android:fontFamily="@font/violet_sans"
                android:text="@string/quote"
                android:textColor="@color/black"

                android:textSize="@dimen/_13msp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@id/guidline1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_from" />

            <TextView
                android:id="@+id/txt_quote_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginEnd="@dimen/_10mdp"
                android:fontFamily="@font/violet_sans"
                android:gravity="end"
                android:text=""

                android:textColor="@color/value_gray"
                android:textSize="@dimen/_13msp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@id/txt_quote_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guidline1"
                app:layout_constraintTop_toTopOf="@id/txt_quote_title" />


            <TextView
                android:id="@+id/txt_network_fee_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginTop="@dimen/_10mdp"
                android:layout_marginBottom="@dimen/_20mdp"
                android:fontFamily="@font/violet_sans"
                android:text="@string/network_fee"

                android:textColor="@color/black"
                android:textSize="@dimen/_13msp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@id/txt_swapper_fee_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_provider_value" />

            <TextView
                android:id="@+id/txt_network_fee_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginEnd="@dimen/_10mdp"
                android:fontFamily="@font/violet_sans"
                android:gravity="end"

                android:maxLines="1"
                android:textColor="@color/value_gray"
                android:textSize="@dimen/_13msp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@id/txt_network_fee_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_network_fee_title"
                app:layout_constraintTop_toTopOf="@id/txt_network_fee_title"
                tools:text="126.93854369785643fhdsjhjkfjdshfjkgdshjkfjdhfdsjkh" />


            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginHorizontal="@dimen/_30mdp"
                android:layout_marginTop="@dimen/_24mdp"
                android:background="@color/button_disable"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_quote_title" />

            <TextView
                android:id="@+id/txt_provider_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginTop="@dimen/_23mdp"
                android:fontFamily="@font/violet_sans"
                android:text="@string/max_slipage"
                android:textColor="@color/black"

                android:textSize="@dimen/_13msp"
                app:layout_constrainedWidth="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <TextView
                android:id="@+id/txt_provider_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginEnd="@dimen/_10mdp"
