<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="buyBTCViewModel"
            type="com.app.plutope.ui.fragment.transactions.buy.buy_btc.BuyBTCViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            tools:context=".ui.fragment.transactions.buy.buy_btc.BuyBTC">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="@dimen/_50mdp"
                    android:layout_height="@dimen/_50mdp"
                    android:layout_marginStart="@dimen/_10mdp"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_effect"
                    android:padding="@dimen/_8mdp"
                    android:src="@drawable/ic_back_new"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    />

                <TextView
                    android:id="@+id/txt_toolbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_80mdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:text="@string/buy_btc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18mdp"
                    app:layout_constraintBottom_toBottomOf="@id/img_back"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/img_back" />

                <TextView
                    android:id="@+id/txt_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15mdp"
                    android:background="@drawable/bg_tab_un_selected"
                    android:drawablePadding="@dimen/_7mdp"
                    android:fontFamily="@font/inter"
                    android:gravity="center_vertical"
                    android:paddingVertical="@dimen/_14mdp"
                    android:paddingStart="@dimen/_13mdp"
                    android:paddingEnd="@dimen/_14mdp"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_16msp"
                    app:drawableEndCompat="@drawable/ic_arrow_down"
                    app:layout_constraintBottom_toBottomOf="@id/img_back"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/img_back"
                    tools:text="USD" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_toolbar">


                <TextView
                    android:id="@+id/txt_currency_symbole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10mdp"
                    android:background="@null"
                    android:focusable="false"
                    android:fontFamily="@font/violet_sans"
                    android:maxLength="1"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/_40msp"
                    app:layout_constraintBottom_toBottomOf="@id/edt_price"
                    app:layout_constraintEnd_toStartOf="@id/edt_price"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/edt_price"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="$" />


                <EditText
                    android:id="@+id/edt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_31mdp"
                    android:layout_marginEnd="@dimen/_10mdp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:fontFamily="@font/violet_sans"
                    android:hint="0"
                    android:includeFontPadding="false"
                    android:inputType="numberDecimal"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/_10mdp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/_40msp"
                    app:autoSizeMaxTextSize="@dimen/_40msp"
                    app:autoSizeMinTextSize="@dimen/_20mdp"
                    app:autoSizeStepGranularity="@dimen/_2mdp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txt_currency_symbole"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_coin_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20mdp"
                    android:background="@drawable/bg_corner_radius_4"
                    android:backgroundTint="@color/light_gray"
                    android:fontFamily="@font/violet_sans"
                    android:paddingHorizontal="@dimen/_13mdp"
                    android:paddingVertical="@dimen/_4mdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18msp"
                    app:layout_constraintEnd_toEndOf="@id/edt_price"
                    app:layout_constraintStart_toStartOf="@id/txt_currency_symbole"
                    app:layout_constraintTop_toBottomOf="@id/edt_price"
                    tools:text="~0.001234BTC" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2mdp"
                    android:layout_marginTop="@dimen/_2mdp"
                    android:fontFamily="@font/quicksand_regular"
                    android:text="Not available!"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_16msp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/edt_price"
                    app:layout_constraintStart_toStartOf="@id/txt_currency_symbole"
                    app:layout_constraintTop_toBottomOf="@id/txt_coin_margin"
                    app:layout_constraintVertical_bias="0.0" />

                <ProgressBar
                    android:id="@+id/progress_amount"
                    android:layout_width="@dimen/_20mdp"
                    android:layout_height="@dimen/_20mdp"
                    android:indeterminateTint="@color/blue_00C6FB"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/edt_price"
                    app:layout_constraintStart_toStartOf="@id/txt_currency_symbole"
                    app:layout_constraintTop_toBottomOf="@id/txt_coin_margin"
                    app:layout_goneMarginTop="@dimen/_10mdp" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/txt_label_choose_provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_21mdp"
                android:layout_marginTop="@dimen/_40mdp"
                android:fontFamily="@font/violet_sans"
                android:text="@string/choose_provider"
                android:textColor="@color/black"
                android:textSize="@dimen/_20msp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_price" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15mdp"
                android:layout_marginTop="@dimen/_16mdp"
                android:layout_marginEnd="@dimen/_15mdp"
                android:background="@drawable/bg_corner_radius_35"
                android:visibility="gone"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_label_choose_provider">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_provider_view"
                    android:layout_width="@dimen/_42mdp"
                    android:layout_height="@dimen/_42mdp"
                    android:layout_marginStart="@dimen/_20mdp"
                    android:src="@drawable/img_logo_circle_black"
                    app:civ_border_color="@color/bg_white"
                    app:civ_border_width="@dimen/_1mdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_provider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_9mdp"
                    android:layout_marginTop="@dimen/_14mdp"
                    android:fontFamily="@font/violet_sans"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_16msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintStart_toEndOf="@id/img_provider_view"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="asdasd"

                    />

                <TextView
                    android:id="@+id/txt_best_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5mdp"
                    android:layout_marginTop="@dimen/_8mdp"
                    android:layout_marginEnd="@dimen/_12mdp"
                    android:background="@drawable/bg_edittext_filled"
                    android:backgroundTint="@color/transparent_green"
                    android:fontFamily="@font/inter"
                    android:paddingHorizontal="@dimen/_12mdp"
                    android:paddingVertical="@dimen/_8mdp"
                    android:text="@string/best_price"
                    android:textColor="@color/green_00A323"
                    android:textSize="@dimen/_12msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintStart_toEndOf="@id/txt_provider"
                    app:layout_constraintTop_toTopOf="parent"

                    />

                <TextView
                    android:id="@+id/txt_provider_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:layout_marginBottom="@dimen/_14mdp"
                    android:fontFamily="@font/violet_sans"
                    android:text="@string/third_party_provider"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_12msp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/txt_provider"
                    app:layout_constraintTop_toBottomOf="@id/txt_provider"

                    />


                <ImageView
                    android:layout_width="@dimen/_20mdp"
                    android:layout_height="@dimen/_20mdp"
                    android:layout_marginEnd="@dimen/_15mdp"
                    android:src="@drawable/ic_arrow_down"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btn_next"
                style="@style/button_disable"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50mdp"
                android:layout_marginHorizontal="@dimen/_30mdp"
                android:layout_marginTop="@dimen/_26mdp"
                android:text="@string/next"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@id/keyboardView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_provider"
                app:layout_constraintVertical_bias="0.9"

                />

            <com.app.plutope.custom_views.CustomKeyboardView
                android:id="@+id/keyboardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30mdp"
                android:visibility="gone"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_next"
                app:layout_constraintVertical_bias="1"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>