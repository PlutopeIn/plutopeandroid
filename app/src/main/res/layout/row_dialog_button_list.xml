<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="buttonModel"
            type="com.app.plutope.model.ButtonModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_10mdp"
        android:background="@drawable/ripple">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_button"
            android:layout_width="@dimen/_40mdp"
            android:layout_height="@dimen/_40mdp"
            android:layout_marginStart="@dimen/_15mdp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />


        <TextView
            android:id="@+id/txtButtonName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45mdp"
            android:gravity="center"
            android:text="@{buttonModel.buttonName}"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_18mdp"
            android:visibility="visible"
            app:fontFamily="@font/violet_sans"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginBottom="@dimen/_20mdp"
            tools:text="Button name" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>