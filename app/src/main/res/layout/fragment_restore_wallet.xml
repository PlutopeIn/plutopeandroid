            <ImageView
                android:id="@+id/img_wallet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_350mdp"
                android:layout_marginTop="@dimen/_33mdp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_one_wallet2"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_restore_your_wallet" />


            <Button
                android:id="@+id/btn_restore_with_google_drive"
                style="@style/wallet_button_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_50mdp"
                android:layout_marginTop="@dimen/_42mdp"
                android:layout_marginBottom="@dimen/_20mdp"
                android:text="@string/restore_with_google_drive"
                android:textAllCaps="false"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/btn_restore_with_secret_phrase"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_wallet"
                app:layout_constraintVertical_chainStyle="packed" />

            <!-- style="@style/wallet_button_gradient"-->

            <Button
                android:id="@+id/btn_restore_with_secret_phrase"
                style="@style/button_border_import_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_25mdp"
                android:layout_marginBottom="@dimen/_20mdp"
                android:text="@string/restore_with_secret_phrase"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_wallet"
                app:layout_constraintVertical_bias="0.9" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

