<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="restoreWalletViewModel"
            type="com.app.plutope.ui.fragment.wallet.restore_wallet.RestoreWalletViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            tools:context=".ui.fragment.wallet.restore_wallet.RestoreWallet">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="-50dp"
                android:layout_marginTop="-280dp"
                android:layout_marginEnd="-50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_circle_bg"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toTopOf="@id/guid1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_30mdp"
                android:layout_height="@dimen/_30mdp"
                android:layout_marginStart="@dimen/_17mdp"
                android:layout_marginTop="@dimen/_20mdp"
                android:padding="@dimen/_8mdp"
                android:src="@drawable/ic_back_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"


                />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guid1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".41" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guid2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".28" />


            <TextView
                android:id="@+id/txt_restore_your_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="@string/restore_your_wallet"
                android:textColor="@color/white"
                android:textSize="@dimen/_27msp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/guid"

                />
            <!--android:text="@string/restore_your_wallet_with_the_12_word_secret_phrase_or_with_icloud"-->
            <TextView
                android:id="@+id/txt_wallet_setup_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_36mdp"
                android:layout_marginTop="@dimen/_19mdp"
                android:fontFamily="@font/quicksand_regular"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_10mdp"
                android:text="@string/restore_your_wallet_with_the_12_word_secret_phrase"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_13msp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_restore_your_wallet"

                />

            <!--
                        <ImageView
                            android:id="@+id/img_pay_now"
                            android:layout_width="@dimen/_237mdp"
                            android:layout_height="@dimen/_240mdp"
                            android:src="@drawable/img_restore_wallet"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/guid2" />
            -->

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/img_pay_now"
                android:layout_width="@dimen/_300mdp"
                android:layout_height="@dimen/_250mdp"
                android:layout_marginTop="@dimen/_20mdp"
                android:scaleType="centerCrop"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guid2"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/restore_wallet"
                app:lottie_speed="2" />


            <Button
                android:id="@+id/btn_restore_with_google_drive"
                style="@style/wallet_button_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_50mdp"
                android:layout_marginTop="@dimen/_42mdp"
                android:layout_marginBottom="@dimen/_20mdp"
                android:text="@string/restore_with_google_drive"
                android:textAllCaps="false"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/btn_restore_with_secret_phrase"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_pay_now"
                app:layout_constraintVertical_bias="1"

                app:layout_constraintVertical_chainStyle="packed" />

            <!-- style="@style/wallet_button_gradient"-->

            <Button
                android:id="@+id/btn_restore_with_secret_phrase"
                style="@style/wallet_button_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_50mdp"
                android:layout_marginBottom="@dimen/_80mdp"
                android:text="@string/restore_with_secret_phrase"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_restore_with_google_drive"
                app:layout_constraintVertical_bias="1" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>