<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="walletSetupViewModel"
            type="com.app.plutope.ui.fragment.wallet.walletSetup.WalletSetupViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            tools:context=".ui.fragment.wallet.walletSetup.WalletSetup">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="-50dp"
                android:layout_marginTop="-200dp"
                android:layout_marginEnd="-50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_circle_bg"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toTopOf="@id/guid1"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guid1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".35" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".1" />


            <TextView
                android:id="@+id/txt_wallet_setup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="@string/wallet_setup"
                android:textColor="@color/white"
                android:textSize="@dimen/_27msp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/guid"

                />

            <TextView
                android:id="@+id/txt_wallet_setup_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_90mdp"
                android:layout_marginTop="@dimen/_30mdp"
                android:fontFamily="@font/quicksand_regular"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_10mdp"
                android:text="@string/enter_the_financial_freedom"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_13msp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_wallet_setup"

                />

<!--
            <ImageView
                android:id="@+id/img_pay_now"
                android:layout_width="@dimen/_230mdp"
                android:layout_height="@dimen/_235mdp"
                android:layout_marginTop="@dimen/_40mdp"
                android:src="@drawable/img_wallet_setup"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guid1" />
-->

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/img_pay_now"
                android:layout_width="@dimen/_230mdp"
                android:layout_height="@dimen/_235mdp"
                android:layout_marginTop="@dimen/_45mdp"
                android:padding="@dimen/_12mdp"
                android:scaleType="centerCrop"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guid1"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/setup_wallet"
                app:lottie_speed="2" />


            <Button
                android:id="@+id/btn_create_wallet"
                style="@style/wallet_button_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_40mdp"
                android:layout_marginTop="@dimen/_42mdp"
                android:text="@string/create_a_new_wallet"
                android:textAllCaps="false"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_pay_now"

                />

            <Button
                android:id="@+id/btn_re_create_recovery"
                style="@style/button_border_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constrainedWidth="true"
                android:layout_marginTop="@dimen/_19mdp"
                android:layout_marginBottom="@dimen/_30mdp"
                android:text="@string/import_using_secret_recovery_phrase"
                android:textAllCaps="false"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/btn_create_wallet"
                app:layout_constraintStart_toStartOf="@id/btn_create_wallet"
                app:layout_constraintTop_toBottomOf="@id/btn_create_wallet" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>