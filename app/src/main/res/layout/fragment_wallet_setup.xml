            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="374dp"
                android:layout_marginTop="@dimen/_20mdp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_one_wallet2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_wallet_setup" />

            <Button
                android:id="@+id/btn_create_wallet"
                style="@style/wallet_button_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_25mdp"
                android:layout_marginTop="@dimen/_42mdp"
                android:focusable="true"
                android:fontFamily="@font/violet_sans"
                android:foreground="?attr/selectableItemBackground"
                android:paddingHorizontal="@dimen/_6mdp"
                android:paddingVertical="@dimen/_6mdp"
                android:text="@string/create_a_new_wallet"
                android:textAllCaps="false"
                android:textSize="@dimen/_18mdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/btn_re_create_recovery"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_view"
                app:layout_constraintVertical_bias="0.9"

                />

            <Button
                android:id="@+id/btn_re_create_recovery"
                style="@style/button_border_import_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_20mdp"
                android:layout_marginTop="@dimen/_19mdp"
                android:layout_marginBottom="@dimen/_30mdp"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingHorizontal="@dimen/_6mdp"
                android:paddingVertical="@dimen/_6mdp"
                android:text="@string/import_using_secret_recovery_phrase"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/_18mdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/btn_create_wallet"
                app:layout_constraintStart_toStartOf="@id/btn_create_wallet"
                app:layout_constraintVertical_bias="1" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>