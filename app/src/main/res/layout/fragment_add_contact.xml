<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="contact"
            type="com.app.plutope.ui.fragment.contact.ContactListViewModel" />
    </data>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            tools:context=".ui.fragment.contact.A">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16mdp"
                android:layout_marginTop="@dimen/_50mdp"
                android:background="@drawable/bg_corner_radius_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/edt_contract_address"
                style="@style/edittext_fill_bg_style_r_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50mdp"
                android:layout_marginTop="@dimen/_10mdp"
                android:hint="@string/public_address_0x"
                android:paddingStart="@dimen/_10mdp"
                android:paddingEnd="@dimen/_90mdp"
                android:maxLines="1"
                android:singleLine="true"
                tools:text="fbdndjfjdnjn"
                android:textCursorDrawable="@null"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="@id/layout_network"
                app:layout_constraintStart_toStartOf="@id/layout_network"
                app:layout_constraintTop_toBottomOf="@+id/edt_name"

                />

            <ImageView
                android:id="@+id/img_scanner"
                android:layout_width="@dimen/_17mdp"
                android:layout_height="@dimen/_17mdp"
                android:layout_marginEnd="@dimen/_17mdp"
                android:src="@drawable/img_scanner"
                app:layout_constraintBottom_toBottomOf="@id/edt_contract_address"
                app:layout_constraintEnd_toEndOf="@id/edt_contract_address"
                app:layout_constraintTop_toTopOf="@id/edt_contract_address" />

            <TextView
                android:id="@+id/txt_paste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_12mdp"
                android:fontFamily="@font/quicksand_regular"
                android:text="@string/paste"
                android:textColor="@color/blue_00C6FB"
                android:textSize="@dimen/_13msp"
                app:layout_constraintBottom_toBottomOf="@id/edt_contract_address"
                app:layout_constraintEnd_toStartOf="@id/img_scanner"
                app:layout_constraintTop_toTopOf="@id/edt_contract_address" />

            <EditText
                android:id="@+id/edt_name"
                style="@style/edittext_fill_bg_style_r_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50mdp"
                android:layout_marginTop="@dimen/_40mdp"
                android:hint="@string/name"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/_10mdp"
                android:textCursorDrawable="@null"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="@id/layout_network"
                app:layout_constraintStart_toStartOf="@id/layout_network"
                app:layout_constraintTop_toTopOf="parent"

                />



            <Button
                android:id="@+id/btn_add_contact"
                style="@style/wallet_button_gradient"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50mdp"
                android:layout_gravity="center"
                android:text="@string/add_contact"
                android:textAllCaps="false"
                app:layout_constrainedWidth="true"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="@id/layout_network"
                app:layout_constraintStart_toStartOf="@id/layout_network"
                app:layout_constraintTop_toBottomOf="@id/edt_contract_address"/>



            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.95" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>