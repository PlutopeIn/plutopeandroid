<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="currencyViewModel"
            type="com.app.plutope.ui.fragment.currency.CurrencyViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".ui.fragment.currency.Currency">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_search"
            style="@style/edittext_fill_bg_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16mdp"
            android:layout_marginTop="@dimen/_22mdp"
            android:autofillHints=""
            android:fontFamily="@font/montserrat_light"
            android:hint="@string/search"
            android:paddingStart="@dimen/_25mdp"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="10dp"
            android:paddingEnd="@dimen/_20mdp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:imeOptions="actionNext"
            android:textColor="@color/white"
            android:textColorHint="@color/purple_7576D"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/_10mdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_currency_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_16mdp"
            android:layout_marginTop="@dimen/_20mdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginBottom="@dimen/_10mdp"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_search"
            tools:itemCount="2"
            tools:listitem="@layout/row_currency_list" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>