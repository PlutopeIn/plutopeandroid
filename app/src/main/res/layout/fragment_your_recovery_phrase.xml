                 app:layout_constraintStart_toStartOf="@id/card_view_blur"
                 app:layout_constraintTop_toTopOf="@id/card_view_blur" />-->


            <TextView
                android:id="@+id/txt_hide_show_phrase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5mdp"
                android:drawablePadding="@dimen/_11mdp"
                android:fontFamily="@font/violet_sans"
                android:paddingVertical="@dimen/_15mdp"
                android:text="@string/show_recovery_phrase"
                android:textColor="@color/black"
                android:textSize="@dimen/_14msp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/card_view"
                app:layout_constraintTop_toBottomOf="@id/card_view"

                />


