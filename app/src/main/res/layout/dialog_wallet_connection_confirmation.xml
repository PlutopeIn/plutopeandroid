<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_20mdp"
            android:background="@drawable/bg_corner_top_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_white"
                android:backgroundTint="@color/bg_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:context=".ui.fragment.transfer.Transfer">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:fitsSystemWindows="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_semi_circle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="-50dp"
                            android:layout_marginTop="-250dp"
                            android:scaleType="centerCrop"
                            android:visibility="gone"
                            app:layout_constrainedHeight="true"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_back"
                            android:layout_width="@dimen/_30mdp"
                            android:layout_height="@dimen/_30mdp"
                            android:layout_marginStart="@dimen/_10mdp"
                            android:layout_marginTop="@dimen/_10mdp"
                            android:focusable="true"
                            android:foreground="@drawable/ripple_effect"
                            android:padding="@dimen/_8mdp"
                            android:src="@drawable/ic_back_arrow"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"

                            />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_toolbar_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20mdp"
                            android:fontFamily="@font/violet_sans"
                            android:text="@string/connection_dapp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18msp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_setting"
                            android:layout_width="@dimen/_28mdp"
                            android:layout_height="@dimen/_28mdp"
                            android:layout_marginEnd="@dimen/_20mdp"
                            android:padding="@dimen/_5mdp"
                            android:src="@drawable/ic_info"
                            android:visibility="gone"
                            app:layout_constrainedHeight="true"
                            app:layout_constraintBottom_toBottomOf="@id/txt_toolbar_title"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/txt_toolbar_title" />


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_connection"
                            android:layout_width="@dimen/_40mdp"
                            android:layout_height="@dimen/_40mdp"
                            android:layout_marginTop="@dimen/_20mdp"
                            android:src="@drawable/img_logo_circle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txt_toolbar_title" />

                        <TextView
                            android:id="@+id/txt_connector_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_20mdp"
                            android:layout_marginTop="@dimen/_20mdp"
                            android:fontFamily="@font/violet_sans"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20msp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/img_connection"
                            tools:text="Connection name | connection type want to something with you" />


                        <TextView
                            android:id="@+id/txt_connection_url"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10mdp"
                            android:drawablePadding="@dimen/_6mdp"
                            android:fontFamily="@font/violet_sans"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16msp"
                            app:drawableStartCompat="@drawable/ic_verified_domain"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txt_connector_name"
                            tools:text="www.google.com" />


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_permission"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_20mdp"
                            android:layout_marginTop="@dimen/_20mdp"
                            android:visibility="gone"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txt_connection_url">


                            <ImageView
                                android:id="@+id/img_validation_icon"
                                android:layout_width="@dimen/_24mdp"
                                android:layout_height="@dimen/_24mdp"
                                android:layout_marginStart="@dimen/_12mdp"
                                android:src="@drawable/ic_scam"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_12mdp"
                                android:layout_marginEnd="@dimen/_12mdp"
                                android:orientation="vertical"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/img_validation_icon"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/txt_description_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/violet_sans"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_13mdp"
                                    tools:text="Description Title" />

                                <TextView
                                    android:id="@+id/txt_description_content"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5mdp"
                                    android:fontFamily="@font/violet_sans"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12msp"
                                    tools:text="Description content" />


                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_scam_url"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_20mdp"
                            android:layout_marginTop="@dimen/_20mdp"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@id/layout_permission">

                            <ImageView
                                android:id="@+id/scam_icon"
                                android:layout_width="@dimen/_20mdp"
                                android:layout_height="@dimen/_20mdp"
                                android:layout_marginTop="@dimen/_10mdp"
                                android:src="@drawable/ic_scam"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/website_flagged_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_16mdp"
                                android:text="@string/website_flagged"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14mdp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/scam_icon" />

                            <TextView
                                android:id="@+id/txt_website_host_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8mdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14mdp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/website_flagged_text" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_network_list"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_200mdp"
                            android:layout_marginTop="@dimen/_20mdp"
                            android:layout_marginBottom="@dimen/_20mdp"
                            android:minHeight="@dimen/_200mdp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constrainedHeight="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/layout_scam_url"
                            tools:itemCount="2"
                            tools:listitem="@layout/row_network_list_item" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_permission_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_20mdp"
                            android:layout_marginTop="@dimen/_20mdp"
                            android:layout_marginBottom="@dimen/_20mdp"
                            android:background="@drawable/bg_corner_radius_10_border"
                            android:visibility="visible"
                            app:layout_constraintBottom_toTopOf="@id/btn_connect"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/rv_network_list"

                            >

                            <TextView
                                android:id="@+id/txt_permissions_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_16mdp"
                                android:layout_marginTop="@dimen/_16mdp"
                                android:fontFamily="@font/quicksand_bold"
                                android:text="Requested permissions"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14msp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_permission_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10mdp"
                                android:layout_marginBottom="@dimen/_15mdp"
                                android:nestedScrollingEnabled="false"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                app:layout_constrainedHeight="true"
                                app:layout_constrainedWidth="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@id/txt_permissions_title"
                                app:layout_constraintStart_toStartOf="@id/txt_permissions_title"
                                app:layout_constraintTop_toBottomOf="@id/txt_permissions_title"
                                tools:itemCount="3"
                                tools:listitem="@layout/row_permission_list_item"

                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_cancel"
                            style="@style/button_border_import_custom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_30mdp"
                            android:layout_marginTop="@dimen/_67mdp"
                            android:text="@string/cancel"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:visibility="visible"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintBottom_toBottomOf="@id/btn_connect"
                            app:layout_constraintEnd_toStartOf="@id/btn_connect"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/btn_connect"
                            app:layout_constraintVertical_bias="1" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_connect"
                            style="@style/wallet_button_gradient"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_30mdp"
                            android:layout_marginTop="@dimen/_20mdp"
                            android:layout_marginBottom="@dimen/_70mdp"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/connect"
                            android:textAllCaps="false"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/btn_cancel"
                            app:layout_constraintTop_toBottomOf="@+id/layout_permission_list"
                            app:layout_constraintVertical_bias="1" />


                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent="0.95" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </ScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>