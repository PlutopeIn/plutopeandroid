<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="confirmEncryptionPasswordViewModel"
            type="com.app.plutope.ui.fragment.password.confirm_encryption_password.ConfirmEncryptionPasswordViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            tools:context=".ui.fragment.password.confirm_encryption_password.ConfirmEncryptionPassword">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="-60dp"
                android:layout_marginTop="-350dp"
                android:layout_marginEnd="-60dp"
                android:scaleType="centerCrop"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toTopOf="@id/guid2"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guid2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".4" />


            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_30mdp"
                android:layout_height="@dimen/_30mdp"
                android:layout_marginStart="@dimen/_17mdp"
                android:layout_marginTop="@dimen/_20mdp"
                android:focusable="true"
                android:foreground="@drawable/ripple_effect"
                android:padding="@dimen/_8mdp"
                android:src="@drawable/ic_back_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"


                />


            <TextView
                android:id="@+id/txt_backup_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_33mdp"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="@string/confirm_encryption_password"
                android:textColor="@color/bg_white"
                android:textSize="@dimen/_23msp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_back" />

            <TextView
                android:id="@+id/txt_backup_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_35mdp"
                android:layout_marginTop="@dimen/_19mdp"
                android:fontFamily="@font/quicksand_regular"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_10msp"
                android:text="@string/lorem_ipsum_dolor_sit_amet_consetetur_adipscing_elitr_sed_diam_nonumy_eirmod_tempor_invidunt_ut_labore_et_dolore_magna"
                android:textColor="@color/bg_white"
                android:textSize="@dimen/_13msp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_backup_title" />

            <TextView
                android:id="@+id/txt_title_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_17mdp"
                android:layout_marginTop="@dimen/_19mdp"
                android:fontFamily="@font/montserrat_medium"
                android:lineSpacingExtra="@dimen/_10msp"
                android:text="@string/password"
                android:textColor="@color/purple_7576D"
                android:textSize="@dimen/_10msp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guid2" />

            <EditText
                android:id="@+id/edt_password"
                style="@style/edittext_fill_bg_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_11mdp"
                android:layout_marginEnd="@dimen/_16mdp"
                android:inputType="textPassword"
                android:letterSpacing="0.5"
                android:paddingStart="@dimen/_20mdp"
                android:paddingEnd="@dimen/_35mdp"
                android:textCursorDrawable="@null"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/txt_title_password"
                app:layout_constraintTop_toBottomOf="@id/txt_title_password" />

            <ImageView
                android:id="@+id/img_hide_show"
                android:layout_width="@dimen/_16mdp"
                android:layout_height="@dimen/_16mdp"
                android:layout_marginEnd="@dimen/_10mdp"
                android:src="@drawable/ic_eye_hide"
                app:layout_constraintBottom_toBottomOf="@id/edt_password"
                app:layout_constraintEnd_toEndOf="@id/edt_password"
                app:layout_constraintTop_toTopOf="@id/edt_password" />


            <TextView
                android:id="@+id/txt_validation_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_17mdp"
                android:layout_marginTop="@dimen/_8mdp"
                android:fontFamily="@font/montserrat_medium"
                android:lineSpacingExtra="@dimen/_10msp"
                android:text="@string/at_least_8_characters_including_one_upper_case_letter_one_lower_case_letter_one_number_and_one_symbol"
                android:textColor="@color/purple_7576D"
                android:textSize="@dimen/_10msp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edt_password" />


            <CheckBox
                android:id="@+id/checkbox_loos_fund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16mdp"
                android:layout_marginTop="@dimen/_43mdp"
                android:layout_marginEnd="@dimen/_15mdp"
                android:button="@drawable/ic_checkbox_selecter"
                android:fontFamily="@font/quicksand_regular"
                android:gravity="top"
                android:lineSpacingExtra="@dimen/_10mdp"
                android:paddingHorizontal="@dimen/_21mdp"
                android:text="@string/if_lose_my_secret_phrase_my_funds_will_be_lost_forever"
                android:textColor="@color/bg_white"
                android:textSize="@dimen/_14msp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@id/checkbox_explore_share"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_validation_message" />

            <CheckBox
                android:id="@+id/checkbox_explore_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10mdp"
                android:button="@drawable/ic_checkbox_selecter"
                android:fontFamily="@font/quicksand_regular"
                android:gravity="top"
                android:lineSpacingExtra="@dimen/_10mdp"
                android:paddingHorizontal="@dimen/_21mdp"
                android:text="@string/if_expose_or_share_my_secret_phrase_to_anybody_my_funds_can_get_stolen"
                android:textColor="@color/bg_white"
                android:textSize="@dimen/_14msp"
                app:layout_constrainedWidth="true"

                app:layout_constraintEnd_toEndOf="@id/checkbox_loos_fund"
                app:layout_constraintStart_toStartOf="@id/checkbox_loos_fund"
                app:layout_constraintTop_toBottomOf="@id/checkbox_loos_fund" />


            <Button
                android:id="@+id/btn_confirm"
                style="@style/button_disable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_30mdp"
                android:layout_marginTop="@dimen/_66mdp"
                android:layout_marginBottom="@dimen/_80mdp"
                android:text="@string/confirm"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/checkbox_explore_share"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>