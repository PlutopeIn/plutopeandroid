<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="nFTsViewModel"
            type="com.app.plutope.ui.fragment.dashboard.nfts.NFTsViewModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        tools:context=".ui.fragment.dashboard.nfts.NFTs">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_nfts_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16mdp"
            android:layout_marginBottom="@dimen/_20mdp"
            android:nestedScrollingEnabled="true"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toTopOf="@id/btn_receive_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:spanCount="2"
            tools:itemCount="5"
            tools:listitem="@layout/row_nft_list_item" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16mdp"
            android:animateLayoutChanges="true"
            android:animationCache="true"
            android:visibility="visible"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shimmer_repeat_delay="10"
            app:shimmer_repeat_mode="restart"
            app:shimmer_shape="linear">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include layout="@layout/row_nft_list_item_shimmer" />

                    <include layout="@layout/row_nft_list_item_shimmer" />

                    <include layout="@layout/row_nft_list_item_shimmer" />

                    <include layout="@layout/row_nft_list_item_shimmer" />

                    <include layout="@layout/row_nft_list_item_shimmer" />
                </LinearLayout>
            </ScrollView>


        </com.facebook.shimmer.ShimmerFrameLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_no_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_100mdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.35">

            <ImageView
                android:id="@+id/img_robot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_user_robot"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_no_nfts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12mdp"
                android:fontFamily="@font/violet_sans"
                android:text="@string/no_nfts_yet"
                android:textColor="@color/black"
                android:textSize="@dimen/_16msp"
                app:layout_constraintEnd_toEndOf="@id/img_robot"
                app:layout_constraintStart_toStartOf="@id/img_robot"
                app:layout_constraintTop_toBottomOf="@id/img_robot" />

            <TextView
                android:id="@+id/txt_add_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7mdp"
                android:fontFamily="@font/violet_sans"
                android:text="@string/learn_more"
                android:textColor="@color/blue_00C6FB"
                android:textSize="@dimen/_10msp"
                app:layout_constraintEnd_toEndOf="@id/img_robot"
                app:layout_constraintStart_toStartOf="@id/img_robot"
                app:layout_constraintTop_toBottomOf="@id/txt_no_nfts" />

            <Button
                android:id="@+id/btn_receive"
                style="@style/wallet_button_gradient"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38mdp"
                android:layout_marginTop="@dimen/_18mdp"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_40mdp"
                android:text="@string/receive"
                android:textAllCaps="false"
                android:textColor="@color/bg_white"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_add_more" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:id="@+id/btn_receive_bottom"
            style="@style/wallet_button_gradient"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_38mdp"
            android:layout_marginBottom="@dimen/_70mdp"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_40mdp"
            android:text="@string/receive_nft"
            android:textAllCaps="false"
            android:visibility="gone"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_nfts_list" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>