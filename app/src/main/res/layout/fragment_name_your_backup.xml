<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="nameYourBackupViewModel"
            type="com.app.plutope.ui.fragment.wallet.name_your_backup.NameYourBackupViewModel" />
    </data>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:fillViewport="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            tools:context=".ui.fragment.wallet.name_your_backup.NameYourBackup">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="-60dp"
                android:layout_marginTop="-350dp"
                android:layout_marginEnd="-60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_circle_bg"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toTopOf="@id/guid2"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guid2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".4" />


            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_30mdp"
                android:layout_height="@dimen/_30mdp"
                android:layout_marginStart="@dimen/_17mdp"
                android:layout_marginTop="@dimen/_20mdp"
                android:padding="@dimen/_8mdp"
                android:src="@drawable/ic_back_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"


                />


            <TextView
                android:id="@+id/txt_backup_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_33mdp"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="@string/name_your_backup"
                android:textColor="@color/white"
                android:textSize="@dimen/_27msp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_back" />

            <TextView
                android:id="@+id/txt_backup_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_35mdp"
                android:layout_marginTop="@dimen/_19mdp"
                android:fontFamily="@font/quicksand_regular"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_10msp"
                android:text="@string/lorem_ipsum_dolor_sit_amet_consetetur_adipscing_elitr_sed_diam_nonumy_eirmod_tempor_invidunt_ut_labore_et_dolore_magna"
                android:textColor="@color/white"
                android:textSize="@dimen/_13msp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_backup_title" />

            <TextView
                android:id="@+id/txt_title_back_up_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_17mdp"
                android:layout_marginTop="@dimen/_19mdp"
                android:fontFamily="@font/montserrat_medium"
                android:lineSpacingExtra="@dimen/_10msp"
                android:text="@string/backup_name"
                android:textColor="@color/purple_7576D"
                android:textSize="@dimen/_10msp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guid2" />

            <EditText
                android:id="@+id/edt_back_up_name"
                style="@style/edittext_fill_bg_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_11mdp"
                android:layout_marginEnd="@dimen/_16mdp"
                android:paddingStart="@dimen/_20mdp"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:paddingEnd="@dimen/_40mdp"
                android:textCursorDrawable="@null"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/txt_title_back_up_name"
                app:layout_constraintTop_toBottomOf="@id/txt_title_back_up_name" />

            <ImageView
                android:id="@+id/img_remove_backup_name"
                android:layout_width="@dimen/_23mdp"
                android:layout_height="@dimen/_23mdp"
                android:layout_marginEnd="@dimen/_10mdp"
                android:src="@drawable/ic_close_circle"
                app:layout_constraintBottom_toBottomOf="@id/edt_back_up_name"
                app:layout_constraintEnd_toEndOf="@id/edt_back_up_name"
                app:layout_constraintTop_toTopOf="@id/edt_back_up_name" />


            <TextView
                android:id="@+id/txt_validation_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_17mdp"
                android:layout_marginTop="@dimen/_8mdp"
                android:fontFamily="@font/montserrat_medium"
                android:lineSpacingExtra="@dimen/_10msp"
                android:text="@string/include_at_least_1_character"
                android:textColor="@color/purple_7576D"
                android:textSize="@dimen/_10msp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edt_back_up_name" />


            <TextView
                android:id="@+id/txt_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_48mdp"
                android:layout_marginTop="@dimen/_100mdp"
                android:layout_marginBottom="@dimen/_28mdp"
                android:fontFamily="@font/quicksand_regular"
                android:gravity="top|center_horizontal"
                android:includeFontPadding="false"
                android:lineSpacingExtra="@dimen/_5msp"
                android:text="@string/do_not_delete_this_backup_file_on_google_drive_or_you_risk_losing_all_your_crypto"
                android:textColor="@color/yellow_FFD23D"
                android:textSize="@dimen/_12msp"
                app:layout_constraintTop_toBottomOf="@id/txt_validation_message"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintBottom_toTopOf="@id/btn_continue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2mdp"
                android:layout_marginEnd="@dimen/_4mdp"
                android:src="@drawable/ic_warning_triangle"
                app:layout_constraintEnd_toStartOf="@id/txt_warning"
                app:layout_constraintTop_toTopOf="@id/txt_warning" />


            <Button
                android:id="@+id/btn_continue"
                style="@style/wallet_button_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_30mdp"
                android:layout_marginBottom="@dimen/_50mdp"
                android:text="@string/_continue"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_validation_message"
                app:layout_constraintVertical_bias=".7"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>